<%# Display form for a new request to be a herbarium curator %>
<%
  @title = :show_herbarium_curator_request.t

  tabs = create_tabs(herbaria_curator_request_links(herbarium: @herbarium))
  @tabsets = { right: draw_tab_set(tabs) }
%>

<%= :show_herbarium_curator_help.tp %>

<%= form_with(url: herbaria_curator_requests_path(id: @herbarium, back: @back,
                                                  q: get_query_param),
              id: "herbarium_curator_request_form") do |f| %>

  <div class="form-group mt-3">
    <%= f.label(:name, :HERBARIUM.t) %>: <%= @herbarium.name.t %>
  </div>
  <div class="form-group mt-3">
    <%= f.label(:notes, "#{:NOTES.t}:") %>
    <%= f.text_area(:notes, rows: 10, class: "form-control",
                    data: { autofocus: true }) %>
  </div>

  <%= submit_button(form: f, button: :SEND.l, center: true) %>

<% end %>
