<% @title = :name_bulk_title.t %>

<%= form_tag(action: :bulk_name_edit) do %>
  <% if @new_names
    val = @new_names.map {|x| CGI::escapeHTML(x)}.join('&#10;') %>
    <input id="approved_names" name="approved_names" type="hidden" value="<%= val.html_safe %>"/>
  <% end %>

  <br/><div class="text-center"><%= submit_tag(:SAVE.l, class: "btn btn-default") %></div><!-- .text-center -->

  <%= render(partial: "shared/form_list_feedback") %>

  <p><label for="list_members"><%= :name_bulk_label.t %>:</label><br/>
  <%= text_area(:list, :members, value: @list_members, cols: 80,
                data: {autofocus: true}) %></p><br/>

  <div class="help-note"><%= :name_bulk_help.tp %></div>
<% end %>

