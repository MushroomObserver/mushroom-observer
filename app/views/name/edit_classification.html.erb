<%
  @title = :edit_classification_title.t(name: @name.display_name)

  tabs = [
    link_with_query(:cancel_and_show.t(type: :name), @name.show_link_args)
  ]
  @tabsets = { right: draw_tab_set(tabs) }
%>

<div class="mt-3 container-text">
  <%= form_tag(add_query_param(action: :edit_classification, id: @name.id)) do %>
    <%= label_tag(:classification, :"form_names_classification".t + ":") %>
    <p class="help-block mt-0">
      <%= rank = rank_as_lower_string(@name.rank)
      :form_names_classification_help.l(rank: rank) %>
    </p>
    <%= text_area_tag(:classification, @name.classification,
                      rows: 10, class: "form-control",
                      data: {autofocus: true}) %>

    <%= submit_tag(:SAVE.t, class: "btn btn-default center-block mt-3") %>
  <% end %>
</div><!--.container-text-->
