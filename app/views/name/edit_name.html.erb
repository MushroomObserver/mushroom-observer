<%
  @title ||= :edit_name_title.t(name: @name.display_name)

  tabs = [
    link_to(:all_objects.t(type: :name), action: :list_names),
    link_with_query(:cancel_and_show.t(type: :name), @name.show_link_args)
  ]
  @tabsets = { right: draw_tab_set(tabs) }
%>

<div class="container-text">
  <%= form_for(
        :name, url: add_query_param(action: :edit_name, id: @name.id)
      ) do |form| %>
    <div class="text-center my-3">
      <%= submit_tag(:SAVE_EDITS.l, class: "btn btn-default") %>
    </div><!-- .text-center -->

    <%= render(partial: "form_name", locals: { form: form }) %>

    <div class="text-center my-3">
      <%= submit_tag(:SAVE_EDITS.l, class: "btn btn-default") %>
    </div><!-- .text-center -->
  <% end %>
</div><!--.container-text-->
