<%# bs4 %>

<!-- A single checkbox and tab in Activity Feed tabset -->
<% checked = @types.include?(type) || @types == ['all'] %>

<%=
tag.span(
  class: class_names("btn btn-light btn-sm", { active: @types == [type] }),
  data: { toggle: "checkbox" }
) do
  check_box_with_label(form: f, field: type, # type,
                       checked: checked,
                       label: log_tab_for_type(@types, type),
                       checked_value: type,
                       id: "type_#{type}", class: "filter-checkbox")
end %>
