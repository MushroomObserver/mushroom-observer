<%
# Tiny form with checkbox to mark an (unidentified) observation as reviewed
%>
<%=
form_with(url: observation_view_path(id: id),
          class: "d-inline-block",
          method: :put, local: false) do |f|
  content_tag(:div, class: "d-inline form-check form-check-inline") do
    f.label("#{selector}_#{id}",
            class: "form-check-label caption-reviewed-link #{label_class}") do
      concat(:mark_as_reviewed.t)
      concat(
        f.check_box(
          :reviewed, class: "form-check-input",
          { checked: "1", class: "mx-3", id: "#{selector}_#{id}",
            onchange: "Rails.fire(this.closest('form'), 'submit')" }
        )
      )
    end
  end
end
%>
