<%
url_params = { action: action, q: get_query_param }
url_params = url_params.merge(
  { observation_id: @observation.id }) if action == :create
if action == :update && @back.present?
  url_params = url_params.merge({ back: @back })
end
%>

<%= form_with(model: @herbarium_record, url: url_params,
              id: "herbarium_record_form") do |f| %>

  <%= submit_button(form: f, button: button_name.t, center: true) %>

  <% if @herbarium_record.observations.count > 1 %>
    <%= alert_block(
      :warning, :edit_affects_multiple_observations.t(type: :herbarium_record)
    ) %>
  <% end %>

  <%= text_field_with_label(form: f, field: :herbarium_name,
                            label: :NAME.t + ":", between: :required) %>
  <% turn_into_herbarium_auto_completer(:herbarium_record_herbarium_name) %>

  <%= text_field_with_label(form: f, field: :initial_det,
                            label: :herbarium_record_initial_det.t + ":",
                            between: :optional) %>

  <%= text_field_with_label(form: f, field: :accession_number,
                            label: :herbarium_record_accession_number.t + ":",
                            append: :required) %>

  <%= help_block_with_arrow("up") do %>
    <%= :create_herbarium_record_accession_number_help.t %>
  <% end %>

  <%= text_area_with_label(form: f, field: :notes, rows: 6,
                           label: :NOTES.t + ":",
                           between: :optional) %>

  <%= submit_button(form: f, button: button_name.t, center: true) %>

<% end %>
