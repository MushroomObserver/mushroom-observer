<%
   @title ||= :show_project_title.t(:title => @project.title)

   # List Projects | Edit Project
   right_links = [link_to(:app_list_projects.t, action: :list_projects),
                 link_with_query(:show_project_admin_request.t, {action: :admin_request, id: @project.id})]

   right_links << link_with_query(:show_project_add_members.t, {action: 'add_members', id: @project.id}) if @project.is_admin?(@user)
   if check_permission(@project)
     right_links << link_with_query(:show_project_destroy.t, {action: :destroy_project, id: @project.id},
                                   {data: {confirm: :are_you_sure.l}})
     right_links << link_with_query(:show_project_edit.t, {action: :edit_project}, id: @project.id)
   end
   right_links << draw_interest_icons(@project)

   @tabsets = {pager_for: @project,
               right: render(partial: "shared/tab_set", locals: {links: right_links})
   }
%>

<div class="row">
  <div class="col-md-6">
    <div class="list-group">
      <div class="list-group-item default">
        <%= @title %>
      </div>
      <div class="list-group-item">
        <p><%= :show_project_created_at.t %>: <%= @project.created_at.web_date %></p>
        <%= content_tag(:p, "#{:show_project_published.t}: #{@name_count}") if false  %>
        <p><%= :show_project_by.t %>: <%= user_link(@project.user) %></p>
        <p><%= :show_project_user_group.t %>: <%= @project.user_group.name.t %></p>
        <p><%= :show_project_admin_group.t %>: <%= @project.admin_group.name.t %></p>
        <%= (:show_project_summary.l + ': ' + @project.summary.to_s.html_safe).tpl %>
        <%= render(:partial => 'show_groups', :locals => {project: @project,
                                                          user: @user}) if @user and @project.user_group.users.member?(@user) %>

      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="list-group">
      <div class="list-group-item">
        <%= :OBSERVATIONS.t %>:
        <% if @project.observations.any? %>
            <%= @project.observations.length %>
            (<%= link_to(:SHOW.t, :controller => :observer, :action => :observations_for_project,
                         :id => @project.id) %> |
            <%= link_to(:app_checklist.t, :controller => :observer, :action => :checklist,
                        :project_id => @project.id) %>)
        <% else %>
            <%= :NONE.t %>
        <% end %>
        <br/>
        <%= :IMAGES.t %>:
        <% if @project.images.any? %>
            <%= @project.images.length %>
            (<%= link_to(:SHOW.t, :controller => :image, :action => :images_for_project,
                         :id => @project.id) %>)
        <% else %>
            <%= :NONE.t %>
        <% end %>
        <br/>
        <%= :SPECIES_LISTS.t %>:
        <% if @project.species_lists.any? %>
            <%= @project.species_lists.length %>
            (<%= link_to(:SHOW.t, :controller => :species_list,
                         :action => :species_lists_for_project, :id => @project.id) %>)
        <% else %>
            <%= :NONE.t %>
        <% end %>
        <br/>
        <%= :show_project_drafts.t %>: <%= @draft_data.any? ? @draft_data.length : :NONE.t %><br/>
        <% @draft_data.each do |datum| %>
            <%= link_with_query(datum['display_name'].t,
                                {controller: :name, action: :show_name_description, id: datum['id']}) %>
            (<%= user_link(User.find(datum['user_id'])) %>)<br/>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-xs-12">
    <%= render(partial: 'comment/show_comments', locals: {object: @project, controls: true, limit: nil}) %>
  </div>
  <div class="col-xs-12">
    <%= show_object_footer(@project) %>
  </div>
</div>