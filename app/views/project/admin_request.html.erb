<%
  @title = :admin_request_title.t(title: @project.title)
%>

<%= form_tag(add_query_param(action: :admin_request, id: @project.id)) do %>
  <%= :admin_request_note.tp %>

  <div class="form-group mt-3">
    <%= label_tag(:email_subject, :request_subject.t + ":") %>
    <%= text_field(:email, :subject, class: "form-control", data: {autofocus: true}) %>
  </div>

  <div class="form-group mt-3">
    <%= label_tag(:email_content, :request_message.t + ":") %>
    <%= text_area(:email, :content, rows: 5, class: "form-control") %>
  </div>

  <%= submit_tag(:SEND.l, class: "btn btn-default center-block mt-3") %>
<% end %>
