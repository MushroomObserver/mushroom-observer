<%
tabs = create_tabs(sequence_form_links(obj: @observation))
@tabsets = { right: draw_tab_set(tabs) }
@container = :full
%>

<div class="row">
  <div class="col-xs-12 col-sm-7">
    <%= render(partial: "observation_title",
               locals: { observation: @observation }) %>
    <%= render(partial: "form", locals: { action: :create, local: true }) %>
  </div>

  <div class="col-xs-12 col-sm-5">
    <ul class="row list-unstyled">
      <%= render(partial: "shared/matrix_box",
                 locals: { object: @observation.rss_log || @observation }) %>
    </ul>
  </div>
</div><!--.row-->
