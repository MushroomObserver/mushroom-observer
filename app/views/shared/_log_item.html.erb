<%
   # Requires local variable object: RssLog, Observation, Image, etc. instance.
   # byebug
   # puts pp object
   log_item = LogItemPresenter.new(object, @view)
%>

<% if log_item %>
  <%# puts pp log_item %>
  <li class="col mb-4 log-item">
    <div class="card h-100" id="<%= log_item.id %>">
      <div class="card-img-top">
        <%= log_item.thumbnail %>
      </div><!-- .card-img-top -->
      <div class="card-body p-3 lh-2">
        <%= link_to log_item.what, class: "log-item-link" do %>
          <p class="card-title log-what d-flex flex-row justify-content-between align-items-start lh-1-2 mb-2">
            <span class="log-id order-2"><%= log_item.id %></span>
            <span class="log-title order-1"><span class='log-name'><%= log_item.name %> </span>
            <% if log_item.author -%>
              <br />
              <span class="log-author small text-muted"><%= log_item.author %> </span><% end %></span>
          </p><!-- .log-what -->
        <% end %>
        <p class="card-text mb-1 small">
          <span class="log-where"><%= log_item.where %></span>
        </p><!-- .card-text -->
        <p class="card-text mb-0 small text-muted">
          <% unless log_item.when.blank? %>
            <span class="log-when"><%= log_item.when %>:</span> <span class="log-who"><%= log_item.who %></span>
          <% end %>
        </p><!-- .card-text -->
      </div><!-- .card-body -->
      <div class="card-footer bg-transparent px-3 text-muted">
        <p class="log-detail mb-0 small">
          <%= log_item.detail %>
        </p><!-- .rss-detail -->
        <p class="log-time mb-0 small">
          <%= log_item.fancy_time %>
        </p><!-- .log-time -->
      </div><!-- .card-footer -->
    </div><!-- .card -->
  </li>
<% end %>
