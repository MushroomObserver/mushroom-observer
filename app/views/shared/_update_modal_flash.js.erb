// Actions may give flash warnings that don't interrupt flow.
// Show the message in the modal to maintain attention on the msg, if any
<% had_flash_messages = flash_notices? # will be false after flashes cleared %>
$("#modal_flash").html("<%= j render(partial: 'layouts/app/flash_notices', locals: { id: 'flash_notices' }) if flash_notices? %>");

<% unless had_flash_messages %>
  // Finally, remove any modals
  $(".modal").modal('hide');
<% end %>
