<%
# What to do if a form submit doesn't succeed
# Takes locals: { identifier:, form:, form_locals: }
form_locals ||= {}
form_locals = form_locals.merge({ format: :turbo_stream })
%>

<%= turbo_stream.update "#modal_flash" do
  flash_notices_html
end %>

<%= turbo_stream.update "#<%= identifier %>_form" do
  render( partial: form, locals: { local: false }.merge(form_locals))
end %>
