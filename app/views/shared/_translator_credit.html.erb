<% lang = Language.find_by_locale(I18n.locale) %>
<% if lang && (!lang.official || Language.tracking_usage) %>
  <div id="translators_credit" class="list-group list-group-compact">
    <% if Language.tracking_usage %>
        <div class="list-group-item disabled bold">
          <%= :app_edit_translations_header.t %>
        </div>
      <% file = Language.save_tags %>
      <%= link_to(:app_edit_translations_this_page.t, {controller: :translation, action: :edit_translations, page: file}, {class: "list-group-item indent"}) %>

      <%= link_to(:app_edit_translations_all_pages.t, {controller: :translation, action: :edit_translations}, {class: "list-group-item indent"}) %>
    <% end %>

    <% if !lang.official %>
        <div class="list-group-item" style=" white-space: normal;
                overflow: visible; text-overflow: unset; ">
        <%= :app_translators_credit.t %>:
        <%=
            ids_and_names = lang.top_contributors(5)
            user_links = ids_and_names.map do |id, name|
              user_link(id, name)
            end.safe_join(', ')
            if ids_and_names.length == 5
              user_links += ', ' + :app_translators_credit_and_others.t
            end
            user_links
        %>
        </div>
    <% end %>
  </div>
<% end %>
