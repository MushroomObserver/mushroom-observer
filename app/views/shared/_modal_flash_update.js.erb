// Update the modal_flash div.
// Actions in modals may give flash warnings that don't interrupt flow.
// This shows the message in the modal to maintain attention on the msg, if any

// Check these now, becuase rendering the flash_notices partial clears the flash
<% had_flash_messages = flash_notices? %>
<% submit_success = (flash_notice_level == 0) %>

$("#modal_flash").html("<%= j flash_notices_html %>");

// Make modal fully removable if submit worked.
// Note that not every flash notice means we're done w form. Only flash success?
// For now, assume the only modal is this one. Otherwise we need an `identifier`
<% if submit_success %>
  $('.modal').attr('data-busy', 'false');
<% end %>

// If no flash, remove any modals
<% unless had_flash_messages %>
  $(".modal").modal('hide');
<% end %>
