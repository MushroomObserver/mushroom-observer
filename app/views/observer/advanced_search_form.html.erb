<%
   @title = :app_advanced_search.t
%>

<style>
  .help-block {
      margin-top: 0;
  }
</style>
<div class="row">
  <div class="col-md-6">
    <p class="help-block"><%= :advanced_search_caveat.t %></p>
    <%= form_tag(:action => 'advanced_search_form') do %>

        <div class="form-group">
        <label for="search_type"><%= :advanced_search_result_type.t %>:</label>
        <p class="help-block"><%= :advanced_search_result_type_help.t %></p>
        <%= select('search', 'type', [
                                   [:OBSERVATIONS.l, :observation],
                                   [:IMAGES.l, :image],
                                   [:LOCATIONS.l, :location],
                                   [:NAMES.l, :name],
                           ]) %>
        </div>
        <div class="form-group">
          <label for="search_name"><%= :NAME.t %>:</label>
          <p class="help-block"><%= :advanced_search_name_help.t %></p>
          <%= text_field('search', 'name', class: "form-control") %>
          <% turn_into_name_auto_completer('search_name', :primer => Name.primer,
                                           :token => ' OR ') %>
        </div>
        <div class="form-group">
          <label for="search_user"><%= :OBSERVER.t %>:</label>

          <p class="help-block"><%= :advanced_search_observer_help.t %></p>
          <%= text_field('search', 'user', class: "form-control") %>
          <% turn_into_user_auto_completer('search_user', :primer => User.primer,
                                           :token => ' OR ') %>
        </div>
        <div class="form-group">
          <label for="search_location"><%= :LOCATION.t %>:</label>
          <p class="help-block"><%= :advanced_search_location_help.t %></p>
          <%= text_field('search', 'location', class: "form-control") %>
          <% turn_into_location_auto_completer('search_location',
                                               :primer => Location.primer,
                                               :token => ' OR ') %>
        </div>
        <div class="form-group">
          <label for="search_content"><%= :advanced_search_content.t %>:</label>
          <p class="help-block"><%= :advanced_search_content_help.t %></p>
          <%= text_field('search', 'content', class: "form-control") %>
          <p class="help-block"><%= :advanced_search_content_notes.t %></p>
        </div>
        <%= submit_tag :SEARCH.l, class: "btn btn-lg btn-default center-block" %>
    <% end %>
  </div>
</div>