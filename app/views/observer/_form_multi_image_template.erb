<div class="margin_top added_image_wrapper row" style="border-top: 1px solid;">
  <div class="col-sm-12">
    <div class="added_image_name_container row">
      <!--Replaced by javascript-->
      <div class="col-sm-10">
        <span style="color: red" class="warn-text"></span>
        <span style="color: green" class="info-text"></span>
      </div>
      <div class="col-sm-2">
        <a href="javascript:" style="float: right;" class="remove_image_link"><%= :image_remove_remove.t %></a>
      </div>
    </div>
    <div class="row">
      <div class="added_image_image_container col-sm-4">
        <img class="img_responsive" src="" style="width: 100%; height: auto;"><br>
        <span>{{img_file_name}}</span>
        <span>{{img_file_size}}</span>
      </div>

      <div class="added_image_details_container col-sm-8">
        <div class="row">
          <div class="col-sm-4">
            <label><%= :NOTES.t %>:</label>
          </div>
          <div class="col-sm-8">
            <%= text_field('temp_image', 'notes', :size => nil, :style => "width: 100%") %>
          </div>
        </div>

        <div class="margin_top added_image_additional_details_container">
          <div class="row">
            <div class="col-sm-4">
              <label><%= :form_images_copyright_holder.t %>:</label>
            </div>
            <div class="col-sm-8">
              <%= text_field('temp_image', 'copyright_holder', value: @image.user.legal_name, :size => nil, :style => "width: 100%") %>
            </div>
          </div>

          <div class="margin_top  row">
            <div class="col-sm-4">
              <label><%= :form_images_when_taken.t %>:</label>
            </div>
            <div class="col-sm-8">
              <%= date_select('temp_image', 'when', {:start_year => 1980, :end_year => Time.now.year,
                                                     :order => [:day, :month, :year]}) %>
              <div>
                <small><%= :form_images_camera_date.t %>:</small>
                <small><a href="javascript:"><span class="camera_date_text"></span></a></small>
              </div>

            </div>
          </div>
          <div class="row">
            <div class="col-sm-4">
              <label><%= :form_images_select_license.t %></label>
            </div>
            <div class="col-sm-8">
              <%= select('temp_image', :license_id, @licenses) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
