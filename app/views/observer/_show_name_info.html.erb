<% # Section showing information about consensus name in ShowObservation
  lines = []
  name = observation.name
%>

<%= content_tag(:p, link_to(:show_name.t(name: name.display_name_brief_authors),
                            controller: :name,
                            action: :show_name, id: name.id)) %>
<%= content_tag(:p, link_to("MyCoPortal", mycoportal_url(name),
                            target: :_blank)) %>
<%= content_tag(:p, link_to("Mycobank", mycobank_name_search_url(name),
                            target: :_blank)) %>
<%= content_tag(:p, link_to(:show_observation_more_like_this.t,
                            controller: :observer,
                            action: :observations_of_name,
                            name: name.id)) %>
<%= content_tag(:p, link_to(:show_observation_look_alikes.t,
                            controller: :observer,
                            action: :observations_of_look_alikes,
                            name: name.id)) %>
<%= content_tag(:p, link_to(:show_observation_related_taxa.t,
                            controller: :observer,
                            action: :observations_of_related_taxa,
                            name: name.id)) %>
<%= list_descriptions(name)&.map { |link| content_tag(:p, link) }.safe_join %>
