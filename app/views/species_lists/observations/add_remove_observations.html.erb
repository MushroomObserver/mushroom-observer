<%
# Linked from observations :index and species_lists :show
@title = :species_list_add_remove_title.t

tabs = [
  link_with_query(:species_list_add_remove_cancel.t,
                  controller: :observations,
                  action: :index)
]
@tabsets = { right: draw_tab_set(tabs) }
action = { controller: "/species_lists/observation_queries", action: "update" }
%>

<%= form_with(url: add_query_param(action: action)) do %>
  <p><%= :species_list_add_remove_body.tp(num: @query.num_results) %></p>

  <div class="form-group">
    <%= label_tag(:species_list, :species_list_add_remove_label.t) %>:
    <%= text_field_tag(:species_list, @id, class: "form-control") %>
    <% turn_into_species_list_auto_completer(:species_list) %>
  </div>

  <div class="form-group center-block">
    <%= submit_tag(:ADD.l, class: "btn btn-default") %>
    <%= submit_tag(:REMOVE.l, class: "btn btn-default") %>
  </div>
<% end %>
