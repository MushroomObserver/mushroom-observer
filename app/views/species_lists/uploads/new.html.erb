<%
  @title = :species_list_upload_title.t

  action = { controller: "/species_lists/uploads", action: :create,
             id: @species_list.id }
%>

<%= form_with(url: action, multipart: true) do |f| %>

  <div class="form-group mt-3">
    <%= :species_list_upload_label.t %>:
    <%= custom_file_field(:species_list, :file) %>
    <div class="help_block">
      <%= :species_list_upload_help.tp %>
    </div>
  </div>

  <%= submit_button(form: f, button: :UPLOAD.l, center: true) %>

<% end %>
