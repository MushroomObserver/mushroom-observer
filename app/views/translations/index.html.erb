<%
  add_page_title(:edit_translations_title.t)
  javascript_include("mo_translations")
%>

<% inject_javascript_at_end %(
  MOTranslations({
    locale: "#{j @lang.locale}",
    confirm_string: "#{j :edit_translations_will_lose_changes.l}",
    loading_string: "#{j :edit_translations_loading.l}",
    saving_string:  "#{j :edit_translations_saving.l}"
  });
) %>

<div id="whirly" class="hidden">
  <span id="whirly_text" class="pb-2"></span>
  <%= image_tag("indicator.gif") %>
</div>

<div class="container-text">
  <p class="help-block"><%= :edit_translations_help.t %></p>
</div>

<div class="row">
  <div class="col-xs-6 translation_container">
    <div>
      <div id="left_translation_container">
        <% @form.each do |item| %>
          <%= case item.class.name
          when /MajorHeader/
            tag.p(h(item.string).gsub('\n', '<br/>').html_safe,
                  class: "major_header")
          when /MinorHeader/
            tag.p(h(item.string).gsub('\n', '<br/>').html_safe,
                  class: "minor_header")
          when /Comment/
            tag.p(h(item.string).gsub('\n', '<br/>').html_safe,
                  class: "comment")
          when /TagField/
            tag = item.tag
            str = preview_string(@strings[tag])
            official_record = @official_records[tag]
            translated_record = @translated_records[tag]
            up_to_date = translated_record &&
              translated_record.updated_at >=
              official_record.updated_at - 1.second
            if !up_to_date &&
               official_record &&
               official_record.text.match(/\A\[:?\w[^\[\]\'\"]*\]\Z/)
              # Mark as translated if there is nothing to actually translate!
              up_to_date = true
            end
            span_class = up_to_date ? "faint" : "font-weight-bold bright"
            str = tag.span(h(str), class: span_class, id: "str_#{tag}")
            label = tag.span(h(tag) + ":", class: "tag")
            label = link_to(label, { page: @page, tag: tag },
                                   data: { tag: tag, role: "show_tag" })
            tag.p(label + " " + str, class: "tag_field")
          else
            raise "Unexpected form item type: #{line.class.name}"
          end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-xs-6 translation_container">
    <div>
      <div id="right_translation_container">
        <%= render(partial: "translations/form") if @edit_tags.any? %>
      </div>
      <div id="translation_results" name="translation_results"
           src="" style="display:none"></div>
    </div>
  </div>
</div><!--.row-->
