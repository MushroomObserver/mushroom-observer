<%
  @title = show_title(@article)
  tabs = create_tabs(article_show_links(article: @article, user: @user))
  @tabsets = { right: draw_tab_set(tabs) }
  @container = :wide
%>

<% card_title = tag.div(class: "card-title") do
  [
    "#{:BY.t} ",
    user_link(@article.user),
    ", ",
    tag.small(@article.created_at.display_time)
  ].safe_join
end %>

<%=
card_block(footer: show_object_footer(@article)) do
  [
    card_title,
    @article.body.tpl
  ].safe_join
end
%>
