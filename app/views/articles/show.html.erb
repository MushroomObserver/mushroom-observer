<%
  @title = show_title(@article)
  @tabsets = { right: draw_tab_set(show_tabs_for_user(@article, @user)) }
  @container = :wide
%>

<% card_title = tag.div(class: "card-title") do
  concat("#{:BY.t} #{user_link(@article.user)},")
  concat(tag.small(@article.created_at.display_time))
end %>

<%=
card_block(footer: show_object_footer(@article)) do
  concat(card_title)
  concat(@article.body.tpl)
end
%>
