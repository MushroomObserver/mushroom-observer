<%
@container = :wide
add_page_title(article_show_title(@article))
add_tab_set(article_show_tabs(article: @article, user: @user))
%>

<% card_title = tag.div(class: "card-title") do
  [
    "#{:BY.t} ",
    user_link(@article.user),
    ", ",
    tag.small(@article.created_at.display_time)
  ].safe_join
end %>

<%=
card_block(footer: show_object_footer(@article)) do
  [
    card_title,
    @article.body.tpl
  ].safe_join
end
%>
