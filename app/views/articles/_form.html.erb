<%= form_with(model: @article) do |f| %>

  <% append = help_block(:div, :form_article_title_help.t +
                               :field_textile_link.t) %>
  <%= text_field_with_label(form: f, field: :title,
                            label: :article_title.t + ":",
                            data: { autofocus: true },
                            append: append) %>

  <% append = help_block(:p, :field_textile_link.t) %>
  <%= text_area_with_label(form: f, field: :body, rows: 10,
                           label: :article_body.t + ":",
                           append: append) %>

  <%= submit_button(form: f, button: :SUBMIT.t, center: true) %>

<% end %>
