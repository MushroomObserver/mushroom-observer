<%# bs4 %>
<!--HAMBURGER_BUTTONS-->
<div id="hamburger" class="row d-block d-sm-none d-print-none">
  <div class="col-6 px-0">
    <%=
    button_tag(
      type: :button, style: "z-index: 1000",
      class: "btn btn-outline-secondary btn-lg hamburger rounded-0",
      data: { toggle: "offcanvas" }
    ) do
      icon("fa-solid", "bars", class: "fa-lg")
    end %>
  </div>
  <div class="col-6 px-0 text-right">
    <%=
    button_tag(
      type: :button, style: "z-index: 1000",
      class: "btn btn-outline-secondary btn-lg hamburger rounded-0",
      data: { toggle: "search", target: "#top_nav" }
    ) do
      icon("fa-solid", "magnifying-glass", class: "fa-lg")
    end %>
  </div>
</div>
<!--/HAMBURGER_BUTTONS-->
