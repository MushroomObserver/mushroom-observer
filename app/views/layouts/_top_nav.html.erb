<%# bs4 %>
<!--top_nav-->
<nav id="top_nav"
     class="navbar navbar-light bg-light navbar-expand-md d-print-none">

  <div class="container-fluid px-0 justify-content-between">
    <div class="top-bar-left d-flex flex-row">
      <% if controller.controller_name == "identify" %>
        <%= render(partial: "observations/identify/form_identify_filter") %>
      <% else ##user is logged in %>
        <%= render(partial: "layouts/top_nav/search_form") %>
      <% end %>
    </div>

    <div class="top-bar-right d-flex flex-row">
      <% if @user.nil? %>
        <%= render(partial: "layouts/top_nav/login") %>
      <% else ##user is logged in %>
        <%= render(partial: "layouts/top_nav/user_nav") %>
      <% end %>
    </div>
  </div>

</nav>
<!--/SEARCH_BAR-->
