  (window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
  ga('create', 'UA-1916187-1', 'auto');
  ga('send', 'pageview');
  </script>
<% end %>
<!--/JAVASCRIPT-->

</body>
</html>
