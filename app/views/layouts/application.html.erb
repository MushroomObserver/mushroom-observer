<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html;charset=utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= auto_discovery_link_tag(:rss, {controller: :observer, action: :rss}, {title: :app_rss.l}) %>
  <title><%= :app_title.l%>: <%= title_tag_contents(controller.action_name)%></title>
  <link rel="SHORTCUT ICON" href="https://mushroomobserver.org/favicon.ico"/>
  <% if @canonical_url %>
  <link href="<%= escape_once(@canonical_url) %>" rel="canonical"/>
  <% end %>
  <%= csrf_meta_tag %>
  <meta property="og:image" content="https://mushroomobserver.org/images/facebook_icon.png"/>
  <meta property="og:title" content="Mushroom Observer"/>
  <meta property="og:description" content="Mushroom Observer is a forum where amateur and professional mycologists can come together and celebrate their common passion for mushrooms by discussing and sharing photos of mushroom sightings from around the world."/>
  <%=
    css = MO.default_theme
    if in_admin_mode?
      css = "Admin"
    elsif browser.bot?
      css = MO.default_theme
    elsif MO.themes.member?(controller.action_name)
      # when looking at a theme's info page render it in that theme
      css = controller.action_name
    elsif @user
      css = @user.theme
      css = MO.themes.sample unless MO.themes.member?(css)
    end
    stylesheet_link_tag(css, media: "screen") +
    stylesheet_link_tag(css, media: "print")
  %>

  <!--JAVASCRIPT - for Turbolinks to work right, the application.js bundle has been moved to the <head>-->
  <%= javascript_includes.map { |f| javascript_include_tag(f, "data-turbolinks-track" => "reload") }.safe_join %>

  <%= @header unless @header.blank? %>
  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->

</head>
<body>

<div id="main_container" class="container-fluid">

  <!--CALLOUT_BANNER-->
  <div class="row d-none d-sm-flex d-print-none">
    <div class="col-12">
      <% if in_admin_mode? %>
        <div class="Admin">
          DANGER: You are in administrator mode. Proceed with caution.
        </div>
      <% end

      banner_text = :app_banner_box.t
      banner_time = TranslationString.banner_time.utc.strftime("%Y%m%d%H%M%S")
      cookie_time = cookies["hideBanner2"].to_s
      dismissed   = cookie_time.match(/^\d{14}$/) &&
                    cookie_time.to_d > banner_time.to_d - 10000
      if banner_text.to_s.length > 1 && !dismissed %>
        <div class="alert alert-success message-banner" id="message_banner">
          <%= javascript_tag("var BANNER_TIME = '#{banner_time}'") %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <%= tag.span "&times;".html_safe aria: { hidden: "true" } %>
          </button>
          <%= banner_text %>
        </div>
      <% end %>
    </div>
  </div>
  <!--/CALLOUT_BANNER-->

  <div class="row row-offcanvas row-offcanvas-left">

    <!--NAVIGATION-->
    <div class="col-8 col-sm-2 sidebar-offcanvas d-print-none" id="navigation">
      <%= render(partial: "/shared/nav_left") %>
    </div>
    <!--/NAVIGATION-->

    <div id="right_side" class="col-12 col-sm-10">

      <!--HAMBURGER_BUTTONS-->
      <div class="row visible-xs d-print-none">
        <div class="col-12 p-0">
          <div class="float-left">
            <button type="button" class="btn btn-lg hamburger rounded-0 position-fixed zindex-dropdown" data-toggle="offcanvas">
              <span class="glyphicon glyphicon-align-justify"></span>
            </button>
          </div>
          <div class="float-right">
            <button type="button" class="btn btn-lg hamburger rounded-0 position-fixed zindex-sticky" style="top: 0; right:0;" data-toggle="search" data-target="#search_bar_row">
              <span class="glyphicon glyphicon-search"></span>
            </button>
          </div>
        </div>
      </div>
      <!--/HAMBURGER_BUTTONS-->

      <!--SEARCH_BAR_NAV-->
      <%= render(partial: "/shared/search_bar") %>
      <!--/SEARCH_BAR_NAV-->

      <% if flash_notices? %>
        <div class="row d-print-none">
          <div class="col-12 max-width-text">
            <%=
              klass = case flash_notice_level
                when 0; "alert-success"
                when 1; "alert-warning"
                when 2; "alert-danger"
              end
              content_tag(:div, flash_get_notices,
                          class: "alert mt-3 #{klass}")
            %>
          </div>
        </div>
      <% end %>
      <% flash_clear %>

      <div id="content" class="row">
        <%= render(partial: "/shared/title_and_tab_sets") %>

        <!--MAIN_PAGE_CONTENT-->
        <div class="col-12">
          <%= yield %>
        </div>
        <!--/MAIN_PAGE_CONTENT-->

        <div class="col-12 d-print-none">
          <%= render(partial: "/shared/translator_credit") %>
        </div>
      </div>

    </div>
  </div>
</div>



<%
  # The divs below are used by jquery to make helpers to determine current
  # bootstrap size.  For example:
  #   jQuery('[data-bootstrap-size]:visible').data('bootstrap-size')
%>
<div id="media_query_tests">
  <div data-bootstrap-size="xs" class="d-sm-none"></div>
  <div data-bootstrap-size="sm" class="d-none d-sm-block d-md-none"></div>
  <div data-bootstrap-size="md" class="d-none d-md-block d-lg-none"></div>
  <div data-bootstrap-size="lg" class="d-none d-lg-block d-xl-none"></div>
</div>

<!--JAVASCRIPT-->
<%= javascript_tag('try { document.cookie = "tz=" + jstz.determine().name() } catch(err) {}') %>
<!--Main initializers go in the footer-->
<%= javascript_include_tag('initializers.js') %>
<% injected_javascripts.each do |script| %>
  <%= javascript_tag(script) %>
<% end %>
<% if Rails.env == "production" %>
  <script>(function (i, s, o, g, r, a, m) {
    i['GoogleAnalyticsObject'] = r;
    i[r] = i[r] || function () {
        (i[r].q = i[r].q || []).push(arguments)
    }, i[r].l = 1 * new Date();
    a = s.createElement(o), m = s.getElementsByTagName(o)[0];
    a.async = 1;
    a.src = g;
    m.parentNode.insertBefore(a, m)
  })
  (window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
  ga('create', 'UA-1916187-1', 'auto');
  ga('send', 'pageview');
  </script>
<% end %>
<!--/JAVASCRIPT-->

</body>
</html>
