<%# uses fontawesome icon helper %>

<%= content_tag(:div, class: classes[:mobile_only]) do
  concat(icon("fa-solid", "fa-user", class: "fa-lg"))
  concat(content_tag(:span, h(@user.login)))
  concat(link_to(:app_logout.t, account_logout_path,
                 { id: "nav_user_logout_link",
                   class: "float-right" }))
end %>

<%= link_to(:app_comments_for_you.t,
            comments_path(for_user: @user.id),
            { class: classes[:mobile_only],
              id: "nav_mobile_your_comments_link" }) %>
<%= link_to(:app_your_observations.t,
            observations_path(user: @user.id),
            { class: classes[:mobile_only],
              id: "nav_mobile_your_observations_link" }) %>
<%= link_to(:app_your_interests.t, interests_path,
            { class: classes[:mobile_only],
              id: "nav_mobile_interests_link" }) %>
<%= link_to(:app_your_summary.t, user_path(@user.id),
            { class: classes[:mobile_only],
              id: "nav_mobile_profile_link" }) %>
<%= link_to(:app_preferences.t, edit_account_preferences_path,
            { class: classes[:mobile_only],
              id: "nav_mobile_preferences_link" }) %>
<%= link_to(:app_join_mailing_list.t,
            "https://groups.google.com/forum/?fromgroups=#!forum/mo-general",
            class: classes[:mobile_only],
            id: "nav_mobile_mailing_list_link") %>
<% if @user.admin && !in_admin_mode? %>
  <%= link_to(:app_turn_admin_on.t, admin_mode_path(turn_on: true),
              { class: classes[:mobile_only],
                id: "nav_mobile_admin_link" }) %>
<% end %>
