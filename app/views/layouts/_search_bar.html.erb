<%# bs4 %>
<!--SEARCH_BAR-->
<nav id="search_bar"
     class="navbar navbar-light d-none d-md-block d-print-none">

  <div class="container-fluid px-0">
    <% if controller.controller_name == "identify" %>
      <%= render(partial: "observations/identify/form_identify_filter") %>
    <% else ##user is logged in %>
      <%= render(partial: "layouts/search_bar/search_form") %>
    <% end %>

    <% if @user.nil? %>
      <%= render(partial: "layouts/search_bar/login") %>
    <% else ##user is logged in %>
      <%= render(partial: "layouts/search_bar/user_nav") %>
    <% end %>
  </div>

</nav>
<!--/SEARCH_BAR-->
