<%
options = [
  [:COMMENTS.l, :comment],
  [:HERBARIA.l, :herbarium],
  # Temporarily disabled for performance reasons. 2021-09-12 JDC
  # [:IMAGES.l, :image],
  [:LOCATIONS.l, :location],
  [:NAMES.l, :name],
  [:OBSERVATIONS.l, :observation],
  [:PROJECTS.l, :project],
  [:SPECIES_LISTS.l, :species_list],
  [:HERBARIUM_RECORDS.l, :herbarium_record],
  [:USERS.l, :user],
  [:app_search_google.l, :google],
].sort

@timer_end ||= Time.zone.now
secs = "%.2f" % (@timer_end.to_f - @timer_start.to_f)
timer = "(#{ :app_index_timer.t(seconds: secs,
                                num: @num_results.to_i) })"
adv_search = link_to(
  content_tag(:span, :app_advanced_search.l, class: "text-nowrap"),
  search_advanced_path
)

# Fields have attributes nested under search via fields_for, eg search[:type]
%>

<%= form_with(url: search_pattern_path, method: :get,
              class: "navbar-form navbar-left px-0",
              id: "pattern_search_form") do |form| %>

  <div class="form-group has-feedback has-search">
    <span class="glyphicon glyphicon-search form-control-feedback"></span>
    <%= fields_for :search do |search_form| %>
      <%= search_form.text_field(:pattern,
                        { value: session[:pattern],
                          class: "form-control",
                          placeholder: :app_find.t }) %>
    <% end %>
  </div><!--.form-group-->

  <div class="form-group text-nowrap">
    <%= fields_for :search do |search_form| %>
      <%= search_form.select(
            :type,
            options_for_select(options, session[:search_type] || :observation),
            { }, { class: "form-control w-auto" }) %>
    <% end %>
  </div><!--.form-group-->

  <div class="form-group text-nowrap">
    <%= fields_for :search do |search_form| %>
      <%= search_form.submit(:app_search.l,
                             class: "btn btn-default mr-2") %>
    <% end %>
  </div><!--.form-group-->

<% end %>

<p class="navbar-text mx-2 text-nowrap">
  <%= link_to(content_tag(:span, :search_bar_help.t),
              info_search_bar_help_path) %>
  <span class=""> |</span>
</p>

<% if @timer_start %>
  <div class="navbar-text my-1 mx-2 hidden-xs smaller">
    <span id="timer"><%= timer %></span><br/>
    <%= adv_search %>
  </div>
<% else %>
  <p class="navbar-text mx-2 hidden-xs">
    <%= adv_search %>
  </p>
<% end %>

<div class="visible-xs">
  <%= content_tag(:span, timer, id: "timer",
                  class: "text-nowrap") if @timer_start %>
  <%= adv_search %>
</div>
