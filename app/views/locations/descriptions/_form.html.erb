<%= form_with model: [:locations, @description] do |f| %>

  <%= render partial: "shared/form_description", locals: {form: f} %>

  <%= f.submit button_name.l, class: "btn mx-auto mt-3" %>

  <hr/>

  <% for field in LocationDescription.all_note_fields %>
    <div class="form-group">
      <%= f.label field, "form_locations_#{field}".to_sym.t + ":",
                  class: "mb-0" %>
      <div class="help-block mt-0">
        <%= "form_locations_#{field}_help".to_sym.l %>
      </div>
      <%= f.text_area field, rows: 10, class: "form-control" %>
    </div>
  <% end %>

  <%= render partial: "shared/textilize_help"  %>

  <%= f.submit button_name.l, class: "btn mx-auto mt-3" %>

  <% if @merge %>
    <%= f.hidden_field :old_desc_id, @old_desc_id %>
    <%= f.hidden_field :delete_after, @delete_after %>
  <% end %>

<% end %>
