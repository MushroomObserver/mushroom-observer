<%

%>

<div class="row">
  <div class="col-sm-6 col-md-4 col-lg-3">
    <%= hidden_field_with_label(form: f, field: :north, label: :WHERE.t + ":",
                                value: @display_name,
                                text: @location.display_name.t) %>
    <%= hidden_field_with_label(form: f, field: :north, label: :NORTH.t + ":",
                                value: @location.north + "째") %>
    <%= hidden_field_with_label(form: f, field: :south, label: :SOUTH.t + ":",
                                value: @location.south + "째") %>
    <%= hidden_field_with_label(form: f, field: :east, label: :EAST.t + ":",
                                value: @location.east + "째") %>
    <%= hidden_field_with_label(form: f, field: :west, label: :WEST.t + ":",
                                value: @location.west + "째") %>

    <% if @location.high.present? && @location.low.present? %>
      <%= hidden_field_with_label(form: f, field: :high,
                                  label: :show_location_highest.t + ":",
                                  value: @location.high + "m") %>
      <%= hidden_field_with_label(form: f, field: :low,
                                  label: :show_location_lowest.t + ":",
                                  value: @location.low + "m") %>
    <% end %>

    <%= help_block(:div, :show_location_locked.t) %>
  </div>

  <div class="col-sm-6 col-md-8 col-lg-9 mb-3 mt-3">
    <%=
      gmap = make_map([@location])
      finish_map(gmap)
      gmap.div(width: "100%", height: "500px").html_safe
    %>
  </div>
</div><!--.row-->
