<%
add_page_title(:commercial_inquiry_title.t(name: @image.unique_format_name))
@container = :text_image

url = add_query_param({ action: :commercial_inquiry, id: @image.id })
%>

<%= form_with(url: url) do |f| %>

  <%= content_tag(:div, thumbnail(@image, size: :medium, votes: false)) %>

  <% label = :commercial_inquiry_header.tp(user: @image.user.legal_name) %>
  <%= text_area_with_label(form: f, field: :content,
                           rows: 10, label: label) %>

  <%= submit_button(form: f, button: :SEND.l, center: true) %>

<% end %>
