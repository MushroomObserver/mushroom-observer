<%
@title = :email_name_change_request_title.t

tabs = [
  link_to(:cancel_and_show.t(type: Name), @name.show_link_args)
]
@tabsets = { right: draw_tab_set(tabs) }

url = { action: :name_change_request, name_id: @name.id, new_name: @new_name }
%>

<%= :email_name_change_request_help.tp %>

<%= form_with(url: url) do |f| %>

  <div class="form-group mt-3">
    <%= label_tag(:name, :NAME.t) %>:
        <%= @name.unique_search_name %>
        [#<%= @name.icn_id.to_s %>]
  </div>

  <div class="form-group mt-3">
    <%= label_tag(:new_name.t) %>: <%= @new_name_with_icn_id %>
    <%# pass it back to the action, else it's clobbered there %>
    <%= hidden_field_tag(:new_name_with_icn_id, @new_name_with_icn_id) %>
  </div>

  <%= text_area_with_label(form: f, field: :notes, rows: 10,
                           value: "", label: :Notes.t + ":",
                           data: { autofocus: true }) %>

  <%= submit_button(form: f, button: :SEND.l, center: true) %>

<% end %>
