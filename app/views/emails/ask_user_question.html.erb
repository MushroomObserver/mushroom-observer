<%
add_page_title(:ask_user_question_title.t(user: @target.legal_name))

url = add_query_param({ action: :ask_user_question, id: @target.id })
%>

<%= form_with(url: url, scope: :email) do |f| %>

  <%= :ask_user_question_label.tp(user: @target.legal_name) %>

  <%= text_field_with_label(form: f, field: :subject, size: 70,
                            label: :ask_user_question_subject.t + ":",
                            data: { autofocus: true }) %>

  <%= text_area_with_label(form: f, field: :content, rows: 10,
                           label: :ask_user_question_message.t + ":") %>

  <%= submit_button(form: f, button: :SEND.l, center: true) %>

<% end %>
