<%
@title = :email_merge_request_title.t(type: @model.type_tag)

tabs = [
  link_to(:cancel_and_show.t(type: @model.type_tag), @old_obj.show_link_args)
]
@tabsets = { right: draw_tab_set(tabs) }

url = { action: :merge_request, type: @model.name,
        old_id: @old_obj.id, new_id: @new_obj.id }
%>

<%= :email_merge_request_help.tp(type: @model.type_tag) %>

<%= form_with(url: url) do |f| %>

  <div class="form-group mt-3">
    <%= label_tag(:old_obj, @model.type_tag.to_s.upcase.to_sym.t) %>:
        <%= @old_obj.unique_format_name.t %>
  </div>

  <div class="form-group mt-3">
    <%= label_tag(:new_obj, @model.type_tag.to_s.upcase.to_sym.t) %>:
        <%= @new_obj.unique_format_name.t %>
  </div>

  <%= text_area_with_label(form: f, field: :notes, rows: 10,
                           value: "", label: :Notes.t + ":",
                           data: { autofocus: true }) %>

  <%= submit_button(form: f, button: :SEND.l, center: true) %>

<% end %>
