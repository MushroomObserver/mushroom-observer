<!--FLASH NOTICES-->
<div class="container-text d-print-none">
  <%=
    klass = case flash_notice_level
      when 0; "alert-success"
      when 1; "alert-warning"
      when 2; "alert-danger"
    end
    content_tag(:div, flash_get_notices,
                id: id,
                class: "alert mt-3 #{klass}")
  %>
</div><!--.container-text-->
<!--/FLASH NOTICES-->
