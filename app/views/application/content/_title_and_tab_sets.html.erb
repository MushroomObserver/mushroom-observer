<%#
The header for page content (below the application top nav)
May include:
prev_next_pager
title
context_help
owner_naming
interest_icons
tab_set
type_filters
sorts
%>
<%
add_filter_help(@any_content_filters_applied)
add_right_tabs = (content_for?(:tab_set) || content_for?(:interest_icons) ||
                     content_for?(:dropdown_tab_set))
%>

<%= tag.div(class: "row-justified") do %>

  <%= tag.div(id: "title_bar") do %>
    <!-- Pager -->
    <%= content_tag_if(content_for?(:prev_next_object), :div,
                       class: "d-print-none") do
          yield(:prev_next_object)
        end -%>

    <!-- Title -->
    <!-- e.g. "Observation 5"; Can be multiple lines, e.g., with Observer ID -->
    <%= tag.h1(yield(:title), class: "h3", id: "title") -%>
    <%= yield(:filter_help) -%>
    <%= yield(:owner_naming) %>
  <% end %>

  <!-- Tabsets and interest icons, within "#right_tabs" -->
  <%= content_tag_if(add_right_tabs,
                    :div, id: "right_tabs",
                    class: "d-flex flex-row d-print-none") do
        concat(yield(:interest_icons))
        concat(yield(:dropdown_tab_set))
        concat(yield(:tab_set))
      end %>

  <%= content_tag_if(content_for?(:type_filters), :div,
                     class: "col-12 d-print-none") do
        yield(:type_filters)
      end %>

  <!-- Sorter. conditionally renders the partial -->
  <%= yield(:sorter) %>

<% end %>
