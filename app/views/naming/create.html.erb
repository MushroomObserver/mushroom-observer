<%
  @observation = @params.observation
  @reason = @params.reason
  @title = :create_naming_title.t(id: @observation.id)

  tabs = [
    link_with_query(:cancel_and_show.t(type: :observation),
                    @observation.show_link_args)
  ]
  @tabsets = { right: draw_tab_set(tabs) }
%>

<%= form_tag(add_query_param(action: :create, id: @observation.id,
                             approved_name: @params.what)) do %>
  <div class="row">
    <div class="col-xs-12 col-sm-8 max-width-text">
      <div class="push-down">
        <%= render(partial: "observations/show_observation",
                   locals: { observation: @observation }) %>
      </div>

      <%= submit_tag(:CREATE.l, class: "btn center-block", style: "margin-top:2em") %>

      <div class="push-down">
        <%= render(partial: "form", locals: { action: :create,
                   button_name: :CREATE.l, show_reasons: true }) %>
      </div>
    </div>

    <div class="col-xs-12 col-sm-4">
      <%= render(partial: "observations/show_images",
                 locals: { observation: @observation,
                           thumb_size_control: false }) %>
    </div>
  </div>
<% end %>
