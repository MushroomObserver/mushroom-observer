<div class="added_image_wrapper" style="border-top: 1px solid;">

  <div class="added_image_name_container row">
    <!--Replaced by javascript-->
    <div class="col-sm-10">
      <span class="text-danger warn-text"></span>
      <span class="text-success info-text"></span>
    </div>
    <div class="col-sm-2">
      <a href="javascript:" class="float-right remove_image_link"><%= :image_remove_remove.t %></a>
    </div>
  </div><!--.row-->

  <div class="row">
    <div class="added_image_image_container col-xs-4">
      <div class="form-group">
        <a href="#" data-role="set_as_default_thumbnail"><%= :image_set_default.t %></a>
        <label class="hidden is_default_thumbnail"><%= :image_add_default.t %></label>
        <input type="radio" name="observation[thumb_image_id]" value="true" style="display: none;">
      </div>
      <div class="form-group">
        <img class="img-responsive" src="">
      </div>
      <div class="form-group" style="overflow-wrap: break-word;">
        <span class="small">{{img_file_name}}</span><br/>
        <span>{{img_file_size}}</span>
      </div>
    </div><!--.row-->

    <div class="added_image_details_container col-xs-8">
      <div class="row">
        <div class="col-sm-4">
          <label><%= :NOTES.t %>:</label>
        </div>
        <div class="col-sm-8">
          <%= text_area(:temp_image, :notes, rows: 2,
                        class: "form-control form-control-sm") %>
        </div>
      </div><!--.row-->

      <div class="added_image_additional_details_container">
        <div class="row pt-3">
          <div class="col-sm-4">
            <label><%= :form_images_copyright_holder.t %>:</label>
          </div>
          <div class="col-sm-8">
            <%= text_field(:temp_image, :copyright_holder, value: @image.user.legal_name,
                            class: "form-control form-control-sm") %>
          </div>
        </div><!--.row-->

        <div class="row pt-3">
          <div class="col-sm-4">
            <label><%= :form_images_when_taken.t %>:</label>
          </div>
          <div class="col-sm-8 form-inline">
            <%= date_select(:temp_image, :when, date_select_opts(@temp_image),
                            class: "form-control form-control-sm") %>
            <div>
              <small><%= :form_images_camera_date.t %>:</small>
              <small><a href="javascript:"><span class="camera_date_text"></span></a></small>
            </div>

          </div>
        </div><!--.row-->

        <div class="row pt-3">
          <div class="col-sm-4">
            <label><%= :form_images_select_license.t %></label>
          </div>
          <div class="col-sm-8">
            <%= select(:temp_image, :license_id, @licenses,
                        {selected: @user.license_id},
                        class: "form-control form-control-sm") %>
          </div>
        </div><!--.row-->

      </div>
    </div><!--.col-->
  </div><!--.row-->

</div>
