<%
  @title = :create_observation_title.t

  tabs = [
    link_with_query(:create_herbarium.t,
                    controller: :herbaria, action: :create)
  ]
  @tabsets = { right: draw_tab_set(tabs) }
%>

<%= form_tag({ action: :create,
               approved_name: @what,
               approved_where: @place_name },
             { multipart: true, name: "observation_form" }) do %>
  <%= render(partial: "form_observations", locals: {
        action: :create,
        logging_optional: false,
        include_naming: true,
        include_images: true,
        button_name: :CREATE.l,
        has_specimen: false
  }) %>
<% end %>
