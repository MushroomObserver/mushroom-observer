<div class="added_image_wrapper" data-image-number="<%= img_number %>">

  <div class="added_image_name_container row">
    <!--Replaced by javascript-->
    <div class="col-12 col-md-10">
      <span class="text-danger warn-text"></span>
      <span class="text-success info-text"></span>
    </div>

    <div class="col-12 col-md-2">
    </div>
    <!--/Replaced by javascript-->
  </div><!--.row-->

  <div class="row mt-2">

    <div class="added_image_image_container col-4">

      <!-- TODO: MULTI IMAGE UPLOAD - ALTER SCRIPT -->
      <div class="form-group mb-2">
        <a href="javascript:"
           class="set_thumb_image btn btn-sm btn-outline-secondary"><%= :image_set_default.t %></a>
        <label class="hidden is_thumb_image"><%= :image_add_default.t %></label>
        <input type="radio" name="observation[thumb_image_id]"
               style="display: none;">
      </div>

      <div class="form-group">
        <img class="img-responsive" src="">
      </div>

      <div class="form-group text-break">
        <span class="small">{{img_file_name}}</span><br/>
        <span>{{img_file_size}}</span>
      </div>

    </div><!--#added_image_image_container.col-->

    <div class="added_image_details_container col-8">

      <div class="text-right mb-2">
        <a href="javascript:"
           class="remove_image_link btn btn-sm btn-outline-secondary fade in"><%= :image_remove_remove.t %></a>
      </div>

      <%= fields_for(:"#{img_number}_temp_image") do |fti| %>

        <div class="row">

          <div class="col-12 col-md-4">
            <%= fti.label(:notes, :NOTES.t + ":") %>
          </div><!--.col-->

          <div class="col-12 col-md-8">
            <%= fti.text_area(:notes, rows: 2,
                              class: "form-control form-control-sm") %>
          </div><!--.col-->

        </div><!--.row-->

        <div class="added_image_additional_details_container">

          <div class="row pt-3">

            <div class="col-12 col-md-4">
              <%= fti.label(:copyright_holder,
                            :form_images_copyright_holder.t + ":") %>
            </div><!--.col-->

            <div class="col-12 col-md-8">
              <%= fti.text_field(:copyright_holder,
                            value: @image.user.legal_name,
                            class: "form-control form-control-sm") %>
            </div><!--.col-->

          </div><!--.row-->

          <div class="row pt-3">
            <div class="col-12 col-md-4">
              <%= fti.label(:when, :form_images_when_taken.t + ":") %>
            </div>
            <div class="col-12 col-md-8 form-inline">
              <%= fti.date_select(:when, date_select_opts(@temp_image),
                                  { class: "form-control form-control-sm",
                                    data: { autocompleter: :year } }) %>
              <div>
                <small><%= :form_images_camera_date.t %>:</small>
                <small><a href="javascript:"><span class="camera_date_text"></span></a></small>
              </div>

            </div>
          </div><!--.row-->

          <div class="row pt-3">
            <div class="col-12 col-md-4">
              <%= fti.label(:license_id,
                            :form_images_select_license.t.html_safe) %>
            </div>
            <div class="col-12 col-md-8">
              <%= fti.select(:license_id, @licenses,
                        { selected: @user.license_id },
                        class: "form-control form-control-sm") %>
            </div>
          </div><!--.row-->

        </div><!--#added_image_additional_details_container-->

      <% end # fields_for %>

    </div><!--#added_image_details_container.col-->

  </div><!--.row-->

</div>
