<% identifier = "naming" %>
var this_modal = $('#modal_<%= identifier %>');

if(this_modal.length > 0) {
  this_modal.modal('show');
} else {
  $('body').append('<%= j render(
    partial: "shared/modal_form",
    locals: {
      identifier: identifier,
      title: @title,
      form: "observations/namings/form",
      show_reasons: true
    }) %>'
  );
}

<%= render(partial: "observations/namings/form_bindings", format: :js) %>
