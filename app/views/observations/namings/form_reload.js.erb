var modal_body = $("#modal_body_naming");

// replace the flash notices in the modal
$("#modal_flash").remove();
modal_body.prepend("<%= j render(partial: 'layouts/app/flash_notices', locals: { id: 'modal_flash' }) if flash_notices? %>");

// replace the form, should show
$("#naming_form").remove();
modal_body.append('<%= j render(partial: "observations/namings/form", locals: { action: @action, show_reasons: true, local: false }) %>')

// re-bind autocomplete to naming_name from shared/form_name_autocomplete
var naming_input = $("#naming_name");

AUTOCOMPLETERS[$('#ur_name').data('uuid')].reuse(naming_input)

naming_input.focus();
