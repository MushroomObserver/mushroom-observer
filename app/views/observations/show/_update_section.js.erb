// Update page with results of update or create herbarium_record
$('#mo_ajax_progress_caption').empty();
$('#mo_ajax_progress').modal('hide');

$("#observation_<%= identifier %>").html('<%= j render(
  partial: "observations/show/#{identifier}",
  locals: { observation: @observation.reload },
  layout: false
) %>');

// Update the page flash, not the modal flash
$("#page_flash").html("<%= j render(
  partial: 'layouts/app/flash_notices',
  locals: { id: 'flash_notices' }
) if flash_notices? %>");

// Hide the modal, because results on page
$(".modal").modal('hide');
