<%
links = []
if check_permission(observation) # header links for image things
  links << link_to(
              :show_observation_add_images.t,
              add_query_param(new_image_for_observation_path(observation.id))
            )
  links << link_to(:show_observation_reuse_image.t,
              add_query_param(reuse_images_for_observation_path(observation.id))
            )
  if observation.images.length > 0
    links << link_to(:show_observation_remove_images.t,
                      add_query_param(
                        remove_images_from_observation_path(observation.id)
                      ))
  end
end %>

<%= tag.strong(:IMAGES.l) %>
<%= tag.span(links.safe_join(" | ")) %>
