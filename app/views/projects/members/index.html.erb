<%
add_page_title(:index_members_title.t + " " + link_to_object(@project))

    def project_tab(project)
      [:show_object.t(TYPE: "Project"), add_query_param(project_path(id: project.id)),
       { class: tab_id(__method__.to_s) }]
    end

@container = :wide

action = { controller: "/projects/members", action: :create,
            project_id: @project.id, q: get_query_param }
%>

<div class="container-text mt-3 pb-2">

  <%= form_with(url: action, id: "project_member_form") do |f| %>

    <%= text_field_with_label(form: f, field: :candidate, size: 40,
                              value: @candidate, placeholder: :start_typing.l,
                              label: :LOGIN_NAME.t + ":",
                              data: { autofocus: true,
                                      autocompleter: :user }) %>

    <%= submit_button(form: f, button: :ADD.t, class: "ml-3") %>

  <% end %>

</div><!--.container-text-->

<table class="table table-striped table-project-members mt-3">
  <thead>
    <tr>
      <th><%= :Login_name.t %></th>
      <th><%= :Full_name.t %></th>
      <th><%= :Status.t %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.sort_by(&:login).each do |user| %>
      <tr>
        <td>
          <%= user_link(user, user.login) %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= @project.member_status(user) %>
        </td>
        <td>
	  <% if @project.is_admin?(@user) %>
	    <%= link_with_query(:change_member_status_change_status.t,
                    edit_project_member_path(project_id: @project.id,
                        candidate: user.id)) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
