<%# Render a checkbox and label for a single-valued boolean content filter %>
<%= tag.div class: "form-inline" do %>
  <%= checked = @user.content_filter[filter.sym] == filter.prefs_vals.first
      form.check_box filter.sym, class: "form-control",
                     checked: checked ? "checked" : "" %>
  <%= form.label :"#{filter.sym}",
                 :"prefs_filters_#{filter.sym}".t) %>.
<% end %>
