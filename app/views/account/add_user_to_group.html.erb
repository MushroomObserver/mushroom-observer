<%
  @title = :add_user_to_group_title.t
%>

<%= form_with(url: { action: :add_user_to_group }) do |form| %>

  <div class="form-group mt-3">
    <%= form.label(:user_name, :add_user_to_group_user.t + ":") %>
    <%= form.text_field(:user_name, "", class: "form-control") %>
  </div>

  <div class="form-group mt-3">
    <%= form.label(:group_name, :add_user_to_group_group.t + ":") %>
    <%= form.text_field(:group_name, "", class: "form-control") %>
  </div>

  <%= form.submit(:ADD.t, class: "btn btn-default mt-3 center-block") %>

<% end %>
