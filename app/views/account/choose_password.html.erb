<%
  @title = :account_choose_password_title.t
  focus_on_password = @user.password.blank?
%>

<%= form_with(model: @user,
              url: { action: :verify, id: @user.id,
                     auth_code: @user.auth_code }) do |f| %>

  <div class="form-group mt-3">
    <%= f.label(:password, :signup_choose_password.t + ":") %>
    <%= f.password_field(:password, value: @user.password,
                          data: { autofocus: focus_on_password },
                          class: "form-control") %>
  </div>

  <div class="form-group mt-3">
    <%= f.label(:password_confirmation, :signup_confirm_password.t + ":") %>
    <%= f.password_field(:password_confirmation,
                          data: { autofocus: !focus_on_password },
                          class: "form-control") %>
  </div>

  <%= f.submit(:SUBMIT.l, class: "btn btn-default center-block mt-3") %>
<% end %>
