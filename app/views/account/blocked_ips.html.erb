<%
  @title = ""
%>

<div class="container-full">
  <div class="row">
    <div class="col-xs-6">
      <p><%= link_to("Refresh Stats", account_blocked_ips_path) %></p>

      <%# ----- Okay IPs ----- %>
      <div class="m-3 p-3" style="background:#f7f">
        <%= form_tag({}, { class: "pb-2" }) %>
          <div class="form-group form-inline">
            <span class="text-larger">Okay IPs:</span><!-- .text-larger --> &nbsp;&nbsp;
            <%= text_field_tag(:add_okay, "", size: 20, data: { autofocus: true },
                              class: "form-control") %>
            <%= submit_tag(:ADD.l, class: "btn btn-default ml-3") %>
            [<%= link_to(
                  "Clear List", account_blocked_ips_path(clear_okay: 1)
                ) %>]
          </div>
        </form>
        <table class="ips">
          <% @okay_ips.each do |ip| %>
            <tr>
              <td><%= ip.t %></td>
              <td>[<%= link_to(
                        :REMOVE.l, account_blocked_ips_path(remove_okay: ip)
                      ) %>]</td>
          <% end %>
        </table>
      </div>

      <%# ----- Blocked IPs ----- %>
      <div class="m-3 p-3" style="background:#f7f">
        <%= form_tag({}, { class: "pb-2" }) %>
          <div class="form-group form-inline">
            <span class="text-larger">Blocked IPs:</span><!-- .text-larger --> &nbsp;&nbsp;
            <%= text_field_tag(:add_bad, "", size: 20, data: { autofocus: true },
                              class: "form-control") %>
            <%= submit_tag(:ADD.l, class: "btn btn-default ml-3") %>
            [<%= link_to(
                  "Clear List", account_blocked_ips_path(clear_bad: 1)
                ) %>]
          </div>
        </form>
        <table class="ips">
          <% @blocked_ips.each do |ip| %>
            <tr>
              <td><%= ip.t %></td>
              <td>[<%= link_to(
                        :REMOVE.l, account_blocked_ips_path(remove_bad: ip)
                      ) %>]</td>
        <% end %>
        </table>
      </div>
    </div>

    <%# ----- Stats / Most Active Users ----- %>
    <div class="col-xs-6">
      <% if @ip.present? %><p><%= render partial: "ip_stats" %></p><% end %>
      <p><%= render partial: "ip_summary" %></p>
    </div>
  </div>
</div><!--.container-full-->
