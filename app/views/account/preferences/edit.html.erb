<%
  @title = :prefs_title.t
  tabs = create_tabs(account_preferences_edit_links)
  @tabsets = { right: draw_tab_set(tabs) }
%>

<%= form_with(model: @user, url: account_preferences_path,
              id: "account_preferences_form") do |form| %>
  <%= render(partial: "account/preferences/login", locals: { f: form })%>
  <%= render(partial: "account/preferences/privacy", locals: { f: form })%>
  <%= render(partial: "account/preferences/appearance", locals: { f: form })%>
  <%= render(partial: "account/preferences/filters", locals: { f: form })%>
  <%= render(partial: "account/preferences/notes", locals: { f: form })%>
  <%= render(partial: "account/preferences/email", locals: { f: form })%>
<% end %>

