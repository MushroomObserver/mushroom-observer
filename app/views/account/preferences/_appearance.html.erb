<!-- Appearance Settings of Account Preferences Form -->
<div class="form-group mt-3 font-weight-bold">
  <%= :prefs_appearance.t %>
</div>

<div class="form-group mb-1 form-inline">
  <%= f.label(:hide_authors, :prefs_hide_authors.t + ":") %>
  <%= f.select(:hide_authors,
                  [[:prefs_hide_authors_none.l, "none"],
                  [:prefs_hide_authors_above_species.l, "above_species"]],
                  {}, { class: "form-control" }) %><br/>
</div>

<div class="form-group mb-1 form-inline">
  <%= f.label(:location_format, :prefs_location_format.t + ":") %>
  <%= f.select(:location_format,
                  [[:prefs_location_format_postal.l, "postal"],
                  [:prefs_location_format_scientific.l, "scientific"]],
                  {}, { class: "form-control" }) %><br/>
</div>

<div class="form-group mb-1 form-inline">
  <%= f.label(:theme, :prefs_theme.t + ":") %>
  <%= f.select(:theme,
                  [
                  [:theme_random.l, "NULL"]
                  ] + MO.themes.map { |t| [t.to_sym.l, t] },
                  {}, { class: "form-control mr-3" }) %>
  <%= link_to(:prefs_themes_about.t, theme_color_themes_path) %><br/>
</div>

<div class="form-group mb-1 form-inline">
  <%= f.label(:locale, :prefs_locale.t + ":") %>
  <%= locales = Language.all.map do |lang|
                  name = lang.name
                  name += " (beta)" if lang.beta
                  [name, lang.locale]
                end
      f.select(:locale, locales, {}, { class: "form-control" }) %><br/>
</div>

<%= render(partial: "account/preferences/checkbox",
           locals: { form: f, field: :thumbnail_maps }) %>
<%= render(partial: "account/preferences/checkbox",
           locals: { form: f, field: :view_owner_id }) %>

<div class="form-group mt-3 form-inline">
  <%= f.label(:layout_count, :prefs_layout_count.t + ":") %>
  <%= f.number_field(:layout_count, class: "form-control", min: 1) %>
</div>

<div class="form-group mt-3 form-inline">
  <%= f.label(:image_size, :prefs_image_size.t) %>
  <%= f.select(:image_size,
               options_for_select(
                 User.image_sizes.filter_map { |key, value|
                   if value > User.image_sizes[:small]
                     ["image_show_#{key}".to_sym.l, key]
                   end
                 }, @user.image_size
               ),
               {}, { class: "form-control" }) %>
</div>

<%= f.submit(:SAVE_EDITS.l, class: "btn btn-default center-block mt-3") %>
