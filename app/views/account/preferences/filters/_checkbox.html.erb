<%# Render a checkbox and label for a single-valued boolean content filter %>
<%
checked = if @user.content_filter[filter.sym] == filter.prefs_vals.first
            "checked"
          else
            ""
          end
%>

<%= check_box_with_label(form: form, field: :"#{filter.sym}", checked: checked,
                         text: :"prefs_filters_#{filter.sym}".t) %>
