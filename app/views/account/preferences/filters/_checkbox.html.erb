<%# Render a checkbox and label for a single-valued boolean content filter %>
<% checked = @user.content_filter[filter.sym] == filter.prefs_vals.first %>

<%= content_tag(:div, class: "checkbox") do
  form.label(:"#{filter.sym}") do
    concat(form.check_box(filter.sym, checked: checked ? "checked" : ""))
    concat(:"prefs_filters_#{filter.sym}".t)
    concat(".")
  end
end %>
