<%# Render a textfield and label for a content filter %>
<%= content_tag(:div, class: "form-group form-inline") do %>
  <%= form.label(:"#{filter.sym}",
                 :"prefs_filters_#{filter.sym}".t + ":") %>
  <%= content_tag(:div, :"prefs_filters_#{filter.sym}_help".t) %>
  <%= form.text_field(filter.sym, class: "form-control",
                      value: @user.content_filter[filter.sym]) %>
<% end %>
