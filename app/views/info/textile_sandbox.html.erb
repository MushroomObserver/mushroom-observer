<% @title = :sandbox_title.t %>

<div class="max-width-text">
  <div class="help-block">
    <%= :sandbox_header.tp %>
  </div>

  <% if !@code.nil? %>
    <strong><%= :sandbox_look_like.t %>:</strong>
    <div class="sandbox">
      <% if @submit == :sandbox_test.l %>
        <%= @code.tpl %>
      <% else %>
        <code>
          <%= escape_html(@code.tpl) %>
        </code>
      <% end %>
    </div>
  <% end %>

  <%= form_tag(action: :textile_sandbox) %>
    <% if !@code.nil? %>
      <div class="sandbox-up-ptr center-block push-down push-up">
        <%= image_tag("up_arrow.png") %>
        <%= submit_tag(:sandbox_test.l, class: "btn") %>
        <%= submit_tag(:sandbox_test_codes.l, class: "btn") %>
        <%= image_tag("up_arrow.png") %>
      </div>
    <% end %>
    <strong><%= :sandbox_enter.t %>:</strong>
    <%= text_area_tag(:code, @code, class: "form-control", rows: 8) %>
    <% if @code.nil? %>
      <%= submit_tag(:sandbox_test.l, class: "btn center-block push-down") %>
    <% end %>
  </form>

  <div class="push-down">
    <p><strong><%= :sandbox_quick_ref.t %>:</strong></p>
    <pre><%= :sandbox_sample.l %></pre>
  </div>

  <strong><%= :sandbox_more_help.t %>:</strong>
  <div class="indent">
    <%# translation not needed as document title is static %>
    <%= link_to(
          "MO Flavored Textile", "https://docs.google.com/document/d/10NiaPDKoK_k3bRIoU1smGXSycDczf_jdkmW-xt-Wf20/edit?usp=sharing"
        ) %><br/>
  </div>

  <strong><%= :sandbox_web_refs.t %>:</strong>
  <div class="indent">
    <%= link_to(:sandbox_link4.t, "http://redcloth.org/textile") %><br/>
    <%= link_to(:sandbox_link5.t, "http://redcloth.org/hobix.com/textile/") %><br/>
    <%= link_to(:sandbox_link6.t, "http://warpedvisions.org/projects/textile-cheat-sheet.md") %><br/>
  </div>
</div>
