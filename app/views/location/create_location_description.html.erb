<%
  @title ||= :create_location_description_title.
                t(:name => @location.display_name)

  new_tab_set do
    add_tab_with_query(:cancel_and_show.t(:type => :location), :action => 'show_location',
      :id => @description.location_id)
  end
%>

<%= form_for(:description, :url => add_query_param(
      :action => :create_location_description,
      :id     => @description.location_id,
    )) do |form| %>
  <br/><center><%= submit_tag(:CREATE.l) %></center>

  <%= render(:partial => 'form_location_description', :locals =>
             {form: form}) %>

  <br/><center><%= submit_tag(:CREATE.l) %></center>
<% end %>
