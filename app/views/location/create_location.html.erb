<%
  @title ||= :create_location_title.t

  tabs = [
    link_to(:all_objects.t(type: :location), action: :list_locations)
  ]
  tabs += location_search_links(@location.name)
  @tabsets = { right: draw_tab_set(tabs) }
%>

<%= form_for(:location, url: add_query_param(
       action: :create_location,
       where: @original_name,
       approved_where: @display_name,
       set_observation: @set_observation,
       set_species_list: @set_species_list,
       set_user: @set_user,
       set_herbarium: @set_herbarium
    )) do |form| %>
  <%= render(partial: "form_location",
             locals: { form: form, button: :CREATE }) %>
<% end %>
