<%
  @title = :edit_glossary_term_title.t(name: @glossary_term.name)

  tabs = [
    link_to(:cancel_and_show.t(type: :glossary_term),
            action: :show_glossary_term, id: @glossary_term.id),
    link_to(:glossary_term_index.t, action: :index)
  ]
  @tabsets = { right: draw_tab_set(tabs) }
%>

<div class="max-width-text">
  <%= form_for(:glossary_term, url: {action: :edit_glossary_term,
               id: @glossary_term.id}) do |form| %>
    <div class="form-group mt-3">
      <%= label_tag(:glossary_name, :glossary_term_name.t + ":") %>
      <%= form.text_field(:name, class: "form-control") %>
    </div>

    <div class="form-group mt-3">
      <%= label_tag(:glossary_description, :glossary_term_description.t + ":") %>
      <%= form.text_area(:description, rows: 15, class: "form-control") %>
    </div>

    <%= submit_tag(:edit_glossary_term_save.t, class: "btn mx-auto mt-3") %>
  <% end %>
</div>
