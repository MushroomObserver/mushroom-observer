<%= form_with(model: [@visual_model, @visual_group], local: true,
              id: "visual_group_form") do |form| %>
  <% if visual_group.errors.any? %>
    <div id="error_explanation">
      <h2>
	<%= pluralize(visual_group.errors.count, "error") %>
	prohibited this visual_group from being saved:
      </h2>

      <ul>
        <% visual_group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <div class="form-group">
      <%= form.label(:name) %>
      <%= form.text_field(:name, size: 40, class: "form-control") %>
      <%= :VISUAL_GROUP.t %>
    </div>

    <div class="form-group">
      <%= form.label(:description) %><br>
      <%= form.text_area(:description, cols: 60, rows: 10,
                         class: "form-control") %>
    </div>

    <%= check_box_with_label(form: form, field: :approved) %>
  </div>

  <div class="actions">
    <%= form.submit(:SUBMIT.t, class: "btn btn-default center-block mt-3") %>
  </div>
<% end %>
