<div class="list-group-item">
  <%= content_tag(
        :big,
        link_to(object.title.t, article_path(object, q: get_query_param))
      ) %>
  <br>
  <%= content_tag(:small, object.created_at.web_time) %>:
  <%= user_link(object.user) %>
  <br>
  <%= truncate(strip_tags(object.body), length: 80).tpl %>
</div>
