<%= tag.div(class: "list-group-item") do
  [
    tag.div do
      link_to(object.title.t, article_path(object), class: "text-larger")
    end,
    tag.div do
      [
        tag.small("#{object.created_at.web_time}:"), user_link(object.user)
      ].safe_join
    end,
    truncate(strip_tags(object.body), length: 80).tpl
  ]
end %>
