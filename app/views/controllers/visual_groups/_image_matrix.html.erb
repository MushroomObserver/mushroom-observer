<div id="results">
<%= paginated_results do %>
  <%= render(Components::MatrixTable.new) do %>
    <% @subset.each do |row| %>
      <% image = row[0] %>
      <% status = row[1] %>
      <%= render(Components::MatrixBox.new(id: image.id)) do %>
        <%= tag.div(class: "panel panel-default") do
          [
            tag.div(class: "thumbnail-container") do
              render(Components::InteractiveImage.new(
                user: @user, image: image, original: true, votes: false, full_width: true
              ))
            end,
            tag.div(class: "panel-body") do
              visual_group_status_links(
                visual_group: visual_group, image_id: image.id, status: status
              )
            end
          ].safe_join
        end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
</div>
