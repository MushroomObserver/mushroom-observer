<%= tag.div(id: "results") do
  paginated_results do
    render MatrixTable.new do
      @subset.each do |row|
        render MatrixBox.new(id: row[0]) do
          tag.div(class: "panel panel-default") do
            [
              tag.div(class: "thumbnail-container") do
                render InteractiveImage.new(
                  user: @user, image: row[0], original: true, votes: false, full_width: true
                )
              end,
              tag.div(class: "panel-body") do
                visual_group_status_links(
                  visual_group: visual_group, image_id: row[0], status: row[1]
                )
              end
            ].safe_join
          end
        end
      end
    end
  end
end %>
