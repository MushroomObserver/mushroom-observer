<%= render(Components::Panel.new(panel_id: "location_footer")) do |panel| %>
  <%= panel.with_body do %>
    <%= tag.div(id: "location_authors_editors") do %>
      <%= render(Components::AuthorsAndEditors.new(
            obj: @location,
            versions: @versions,
            user: @user
          )) %>
    <% end %>
    <%= :show_name_num_notifications.t(num: @location.interests) %>
  <% end %>
  <%= panel.with_footer do %>
    <%= tag.div(id: "location_previous") do
          show_previous_version(@location, @versions)
        end %>
  <% end %>
<% end %>
