<%= unless @location.notes.blank?
  panel_block(
    id: "location_notes",
    heading: :NOTES.l,
    heading_links: icon_link_to(*edit_location_tab(@location))
  ) do
    @location.notes.to_s.html_safe.tpl
  end
end %>

<%= render(partial: "comments/comments_for_object",
            locals: { object: @location, comments: @comments,
                      controls: @user, limit: 2 }) %>

<% footer = tag.div(id: "name_previous_export") do
  concat(show_previous_version(@location, @versions))
  concat(export_status_controls(@location))
end %>

<%= panel_block(id: "location_footer", footer: footer) do
  concat(tag.div(id: "location_authors_editors") do
    show_authors_and_editors(obj: @location, versions: @versions, user: @user)
  end)
  concat(:show_name_num_notifications.t(num: @location.interests))
end %>
