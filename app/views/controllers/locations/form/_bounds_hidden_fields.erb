<%# locals: (location: nil, target_type: :geocode_target) -%>

<%= fields_for(:location) do |f_l| %>
  <% %w[north south east west low high].each do |key| %>
    <%= f_l.hidden_field(
      :"#{key}", value: location&.send(key) || nil,
      data: { "#{target_type}_target".to_sym => "#{key}Input" }
    ) %>
  <% end %>
<% end %>
