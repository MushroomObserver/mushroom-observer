<div class="row mt-5">
  <div class="col-sm-8">
    <div class="row vcenter">
      <div class="col-xs-4 col-xs-offset-4">
        <div class="text-center">
          <%= text_field_with_label(
            form: f, field: :north, label: :NORTH.t + ":", addon: "ยบ",
            data: { map_target: "northInput", action: "map#bufferInputs" }
          ) %>
        </div><!-- .text-center -->
      </div>
    </div>
    <div class="row mt-3 vcenter">
      <div class="col-xs-4">
        <div class="text-center">
          <%= text_field_with_label(
            form: f, field: :west, label: :WEST.t + ":", addon: "ยบ",
            data: { map_target: "westInput", action: "map#bufferInputs" }
          ) %>
        </div><!-- .text-center -->
      </div>
      <div class="col-xs-4 small p-0">
        <div class="text-center">
          <%= :form_locations_lat_long_help.t %>
        </div><!-- .text-center -->
      </div>
      <div class="col-xs-4">
        <div class="text-center">
          <%= text_field_with_label(
            form: f, field: :east, label: :EAST.t + ":", addon: "ยบ",
            data: { map_target: "eastInput", action: "map#bufferInputs" }
          ) %>
        </div><!-- .text-center -->
      </div>
    </div>
    <div class="row mt-3 vcenter">
      <div class="col-xs-4 col-xs-offset-4">
        <div class="text-center">
          <%= text_field_with_label(
            form: f, field: :south, label: :SOUTH.t + ":", addon: "ยบ",
            data: { map_target: "southInput", action: "map#bufferInputs" }
          ) %>
        </div><!-- .text-center -->
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="text-center">
      <%= text_field_with_label(
        form: f, field: :high, label: :show_location_highest.t + ":",
        addon: "m", data: { map_target: "highInput" }
      ) %>
      <%= text_field_with_label(
        form: f, field: :low, label: :show_location_lowest.t + ":",
        addon: "m", data: { map_target: "lowInput" }
        # append: "(#{:units_meters.t})",
      ) %>
      <%= tag.button(
        :form_locations_get_elevation.l,
        type: :button, class: "btn btn-default",
        data: { map_target: "getElevation", action: "map#getElevations",
                map_points_param: "input", map_type_param: "rectangle" }
      ) %>
    </div><!-- .text-center -->
  </div>
</div><!--.row-->
