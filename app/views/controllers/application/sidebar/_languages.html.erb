<% unless browser.bot?%>
  <%= tag.div(class: "list-group-item pl-3 overflow-visible") do %>
    <%= tag.div(class: "dropdown") do %>
      <%= tag.span("#{:app_languages.t}:") %>
      <%= tag.a(class: "dropdown-toggle", role: "button",
                href: "#", id: "language_dropdown_toggle",
                data: { toggle: "dropdown" },
                aria: { expanded: "false" }) do %>
        <%= image_tag("/flags/flag-#{I18n.locale.downcase}.png",
                      class: "lang-flag") %>
        <%= tag.span(class: "caret") %>
      <% end %>
      <%= tag.ul(id: "language_dropdown_menu",
                 class: "dropdown-menu", role: "menu") do %>
        <% Language.where.not(beta: true).order(:order).each do |lang|
          lang_link = [
            image_tag("/flags/flag-#{lang.locale}.png", class: "lang-flag"),
            h(lang.name)
          ].safe_join(" ") %>
          <%= tag.li do
            link_to(
              lang_link, reload_with_args(user_locale: lang.locale),
              class: "lang-dropdown-link text-nowrap",
              id: "lang_drop_#{lang.locale}_link",
              data: { locale: lang.locale }
            )
          end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
