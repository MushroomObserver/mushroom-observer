<%= form_with(url: add_query_param(activity_logs_path),
              method: :get, scope: :type,
              class: "filter-form", id: "log_filter_form") do |form|

  filters = RssLog::ALL_TYPE_TAGS.map(&:to_s).map do |type|
    type_checkbox_with_button(query, types, type, form)
  end

  tag.div(class: "btn-group pb-1 hidden-xs text-nowrap") do
    [
      tag.span(:rss_show.t, class: "btn btn-default btn-sm disabled"),

      # Everything tab
      tag.span(
        filter_for_everything(query, types),
        class: class_names("btn btn-default btn-sm",
                           { active: types == ['all'] })
      ),

      # Tab for each type of log
      *filters,

      form.submit(:SUBMIT.t, class: "btn btn-default btn-sm")
    ].safe_join
  end

end %>
