<%# Project banner with title, location, date_range,
    and potentially edit_icons %>
<%
is_project = controller.controller_name == "projects"
title_id = is_project ? "title" : "banner_title"
%>

<%= tag.div(class: "row") do %>
  <%= tag.div(class: "col-xs-12", id: "project_banner") do %>
    <%= yield(:banner_image) %>
    <%= tag.div(class: "bottom-left ml-3 mb-3 p-2") do %>
      <%= tag.div(class: "navbar-flex") do %>
        <%= tag.h1(yield(:banner_title),
                   class: "h3 banner-image-text", id: title_id) -%>
        <% if is_project && content_for?(:edit_icons) %>
          <%= tag.div(yield(:edit_icons)) %>
        <% end %>
      <% end %>
      <% if content_for?(:project_location) %>
        <%= tag.div(yield(:project_location),
                    class: "project_location banner-image-text") %>
      <% end %>
      <% if content_for?(:project_date_range) %>
        <%= tag.div(yield(:project_date_range),
                    class: "project_date_range banner-image-text") %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
