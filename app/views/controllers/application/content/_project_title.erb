<%# Project banner with title, location, date_range %>

<%= yield(:banner_image) %>
<%= tag.div(class: "bottom-left ml-3 mb-3 p-2") do %>
  <%= tag.h1(yield(:title), class: "h3 image-title-text", id: "title") -%>
  <% if content_for?(:project_location) %>
    <%= tag.div(yield(:project_location), class: "image-title-text") %>
  <% end %>
  <% if content_for?(:project_date_range) %>
    <%= tag.div(yield(:project_date_range), class: "image-title-text") %>
  <% end %>
<% end %>
