<%
heading = :show_name_lifeform.l
if @user
  link = link_with_query(:EDIT.l, edit_name_lifeform_path(@name.id))
  heading += " [#{link}]".html_safe
end
%>

<%= tag.div(class: "col-sm-6") do
  panel_block(heading: heading, inner_class: "name-section",
              id: "name_lifeform", data: { name_panels_target: "lifeform" }) do
    render(partial: "names/show/lifeform")
  end
end %>
