<%
heading = :show_name_notes.l
link = icon_link_to(*edit_name_tab(@name))
heading_links = @user ? link.html_safe : ""
%>

<%= render(Components::Panel.new(
      panel_id: "name_notes"
    )) do |panel| %>
  <%= panel.with_heading do %>
    <%= heading %>
  <% end %>
  <% if @user %>
    <%= panel.with_heading_links do %>
      <%= heading_links %>
    <% end %>
  <% end %>
  <%= panel.with_body do %>
    <%= @name.notes.tpl %>
  <% end %>
<% end %>
