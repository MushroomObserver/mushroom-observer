<% if !@name.lifeform.blank? %>
  <%= tag.div(class: "mb-2") do
    @name.lifeform.strip.split(" ").each do |word|
      concat(tag.p(:"lifeform_#{word}".t))
    end
  end %>
<% end %>

<%= if @first_child
  tag.p(link_with_query(:show_name_propagate_lifeform.t,
                        propagate_name_lifeform_form_path(@name.id)))
end %>
