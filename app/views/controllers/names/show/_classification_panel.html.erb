<%
heading = :show_name_classification.l
link = icon_link_to(*name_edit_classification_tab(@name))
heading_links = @user ? link.html_safe : ""
%>

<%= render(Components::Panel.new(
      panel_class: "name-section",
      inner_id: "name_classification",
      attributes: { data: { name_panels_target: "classification" } }
    )) do |panel| %>
  <%= panel.render(Components::PanelHeading.new) do %>
    <%= heading %>
    <% if @user %>
      <span class="float-right"><%= heading_links %></span>
    <% end %>
  <% end %>
  <%= panel.render(Components::PanelBody.new) do %>
    <%= approved_name_and_parents(@name) %>
    <%= name_subtaxa_query_link(@name, @children_query) if @first_child %>
    <%= refresh_classification_link(@name) %>
    <%= propagate_classification_link(@name) if @first_child %>
    <%= inherit_classification_link(@name) %>
  <% end %>
<% end %>
