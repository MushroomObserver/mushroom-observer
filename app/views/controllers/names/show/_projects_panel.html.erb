<%= render(Components::Panel.new(
      inner_id: "name_projects"
    )) do |panel| %>
  <%= panel.render(Components::PanelHeading.new { :show_name_create_draft.t }) %>
  <%= panel.render(Components::PanelBody.new) do %>
    <% @projects.each do |project| %>
      <%= link_to(
        project.title,
        new_name_description_path(@name.id, project: project.id, source: :project)
      ) %><%= safe_br %>
    <% end %>
  <% end %>
<% end %>
