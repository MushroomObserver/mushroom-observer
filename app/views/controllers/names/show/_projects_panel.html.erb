<%= render(Components::Panel.new(
      panel_id: "name_projects"
    )) do |panel| %>
  <%= panel.with_heading do %>
    <%= :show_name_create_draft.t %>
  <% end %>
  <%= panel.with_body do %>
    <% @projects.each do |project| %>
      <%= link_to(
        project.title,
        new_name_description_path(@name.id, project: project.id, source: :project)
      ) %><%= safe_br %>
    <% end %>
  <% end %>
<% end %>
