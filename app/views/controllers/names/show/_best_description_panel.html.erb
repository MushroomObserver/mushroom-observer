<%
heading = :show_name_general_description.l
link1 = icon_link_to(*name_show_description_tab(@name))
link2 = icon_link_to(*name_edit_description_tab(@name))
heading_links = @user ? [link1, link2].reject(&:nil?).safe_join(" | ") : ""
%>

<%= render(Components::Panel.new(
      panel_id: "name_general_description"
    )) do |panel| %>
  <%= panel.with_heading do %>
    <%= heading %>
  <% end %>
  <% if @user %>
    <%= panel.with_heading_links do %>
      <%= heading_links %>
    <% end %>
  <% end %>
  <%= panel.with_body do %>
    <%= @best_description.tpl %>
  <% end %>
<% end %>
