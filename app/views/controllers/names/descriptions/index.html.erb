<%
add_index_title(@query)
add_context_nav(name_description_index_tabs(query: @query))
add_sorter(@query, descriptions_index_sorts)
add_pagination(@pagination_data)
flash_error(@error) if @error && @objects.empty?
%>

<%= paginated_results do %>
  <% if @objects.any? %>
    <table class="table table-striped">
      <% (@objects || []).each do |desc| %>
        <tr>
          <td>
            <%= link_to(desc.format_name.t, name_description_path(desc.id)) %>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
<% end %>
