<%
fields_1 = {
  date: [:created, :modified],
  quality: [:deprecated, :has_author, :author, :has_citation, :citation,
            :has_observations]
}
fields_2 = {
  scope: [:has_synonyms, :include_synonyms, :include_subtaxa,
          :include_misspellings, :rank, :lichen],
  detail: [:has_classification, :classification, :has_notes, :notes,
           :has_comments, :comments, :has_description]
}
%>

<%= form_with(url: { action: :create }) do |f| %>

  <%= tag.div(class: "row") do %>
    <% [fields_1, fields_2].each do |field_groups| %>
      <%= tag.div(class: "col-xs-12 col-sm-6") do %>
        <% field_groups.each do |heading, fields| %>
          <%= panel_block(heading: :"search_term_group_#{heading}".l) do %>
            <% fields.each do |field| %>
              <%= pattern_search_field(form: f, field: field, type: :name) %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <%= submit_button(form: f, button: :SEARCH.l, center: true) %>

<% end %>
