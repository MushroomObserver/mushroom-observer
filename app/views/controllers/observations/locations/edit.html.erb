  <% if @others.any? %>
    <div class="col-md-6">
      <div class="h4">
        <%= :list_merge_options_others.t %>
      </div>
      <table class="table table-striped table-location-merge-options">
        <%# @others.each do |location| %>
          <%= render(partial: "observations/locations/row",
                     locals: @others, as: location }) %>
