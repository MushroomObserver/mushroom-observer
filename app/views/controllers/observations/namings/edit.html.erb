<%
container_class(:double)
add_page_title(naming_form_edit_title(obs: @observation))
add_context_nav(naming_form_edit_tabs(obs: @observation))
%>

<div class="row">
  <div class="col-xs-12 col-sm-8">
    <div class="mt-3">
      <%= render(partial: "observations/show/observation_details",
                 locals: { obs: @observation }) %>
    </div>

    <div class="mt-3">
      <%= render(partial: "observations/namings/form",
                 locals: { local: true,
                           form_locals: { show_reasons: true } }) %>
    </div>
  </div>
  <!--.col-->

  <div class="col-xs-12 col-sm-4">
    <%= render(partial: "observations/show/images",
               locals: { obs: @observation,
                         thumb_size_control: false }) %>
  </div>
  <!--.col-->
</div>
<!--.row-->
