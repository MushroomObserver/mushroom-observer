<%=
# On form reload we don't have @image, so pass explicitly
turbo_stream.prepend(
  "added_images",
  partial: "observations/form/images/carousel_item",
  locals: { upload: true, image: @image,
            img_id: params[:img_id], index: params[:index],
            camera_info: { file_name: params[:file_name],
                           file_size: params[:file_size] } }
)
%>
<%=
turbo_stream.prepend(
  "added_thumbnails",
  partial: "shared/carousel_thumbnail",
  locals: { upload: true, index: params[:index], img_id: params[:img_id],
            html_id: "observation_upload_images_carousel" }
)
%>
