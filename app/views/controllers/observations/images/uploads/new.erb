<%=
# On form reload we don't have @image, so pass explicitly
turbo_stream.prepend(
  "added_images",
  ::Components::Form::ImageCarouselItem.new(
    user: @user,
    image: @image,
    index: params[:index].to_i,
    upload: true,
    thumb_id: nil,
    camera_info: {
      file_name: params[:file_name],
      file_size: params[:file_size]
    }
  )
)
%>
<%=
turbo_stream.prepend(
  "added_thumbnails",
  ::Components::CarouselThumbnail.new(
    user: @user,
    image: nil,
    upload: true,
    index: params[:index].to_i,
    img_id: params[:img_id],
    html_id: "observation_upload_images_carousel"
  )
)
%>
