<%# good image fields partial section of create_observation form %>
<%= fields_for(:good_image) do |fgi| %>

  <%= text_area_with_label(form: fgi, field: :notes, index: image.id,
                           value: image.notes, rows: 3, label: :NOTES.l) %>

  <%= text_field_with_label(form: fgi, field: :original_name, index: image.id,
                            value: image.original_name, size: 40,
                            label: :form_observations_original_name.l) %>

  <%= text_field_with_label(form: fgi, field: :copyright_holder,
                            index: image.id, value: image.copyright_holder,
                            label: :form_images_copyright_holder.l) %>

  <%= date_select_with_label(form: fgi, field: :when, index: image.id,
                             value: image.when, object: image,
                             label: :form_images_when_taken.l) %>

  <%= select_with_label(form: fgi, field: :license_id, index: image.id,
                        options: License.current_names_and_ids(image.license),
                        select_opts: { selected: image.license_id },
                        label: :form_images_select_license.t,
                        append: help_block(:p, :form_images_license_help.t.html_safe)) %>

<% end %>
