<%
add_page_title(:name_lister_title.t)

add_context_nav(species_list_form_name_list_tabs)
set_container(:full)
%>

<noscript>
  <div class="container-text mt-3">
    <%= :name_lister_no_js.tp %>
  </div>
</noscript>

<table
  cols="3" class="name-lister mt-3 w-100" data-controller="name-list"
  data-action="keypress->name-list#ourKeypress keydown->name-list#ourKeydown keyup->name-list#ourKeyup click->name-list#ourUnfocus">

  <thead>
    <tr>
      <th width="20%"><%= :name_lister_genera.t %></th>
      <th width="40%"><%= :name_lister_species.t %></th>
      <th width="40%"><%= :name_lister_names.t %></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>
        <%= tag.div("", id: "genera", class: "scroller",
                        data: { name_list_target: "genera",
                                action: "click->name-list#ourFocus" }) %>
      </td>
      <td>
        <%= tag.div("", id: "species", class: "scroller",
                        data: { name_list_target: "species",
                                action: "click->name-list#ourFocus" }) %>
      </td>
      <td>
        <%= tag.div("", id: "names", class: "scroller",
                        data: { name_list_target: "names",
                                action: "click->name-list#ourFocus" }) %>
      </td>
    </tr>

    <tr>
      <td colspan="3">
        <%= render(partial: "species_lists/name_lists/form") %>
      </td>
    </tr>
  </tbody>
</table>
