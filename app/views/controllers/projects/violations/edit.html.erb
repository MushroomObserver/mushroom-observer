<%
  add_page_title(:violations_edit_title.t)
  @container = :wide
%>

<h4 class="pb-3">
  <%= :PROJECT.l + ": " + link_to_object(@project).t %>
<h4>

<div class="smaller">

<%= help_block(:div, violations_help_text(@project)) %>

<%=
  form_with(
    model: @project, url: project_violations_path, method: :post
  ) do |form|
%>
    <div id="violations">
      <%=
        make_table(
          headers: violation_table_headers(@project),
          rows: violation_table_rows(
            form: form, project: @project, violations: @violations
          )
        )
      %>
    </div>
    <%= form.submit(violations_submit_text(@project)) %>
  <% end %>
</div>
