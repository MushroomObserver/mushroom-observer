<%=
tag.tr(id: dom_id(tracker),
       data: { controller: "field-slip-job",
               status: FieldSlipJobTracker.statuses[tracker.status],
               endpoint: field_slip_job_tracker_path(tracker.id) }) do
  [
    tag.td(data: { field_slip_job_target: "link" }) do
      # returns link to file or filename, depending on status
      field_slip_link(tracker)
    end,
    tag.td(data: { field_slip_job_target: "link" }) do
      user_link(tracker.user_id, tracker.user.login)
    end,
    tag.td(class: "text-center", data: { field_slip_job_target: "seconds" }) do
      number_with_precision(tracker.elapsed_time, precision: 1)
    end,
    tag.td(class: "text-center", data: { field_slip_job_target: "pages" }) do
      tracker.pages.to_s
    end,
    tag.td(class: "text-right", data: { field_slip_job_target: "status" }) do
      tracker.status
    end
  ].safe_join
end
%>
