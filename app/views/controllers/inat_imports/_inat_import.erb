<%=
  tag.div(id: "current_status_#{inat_import.id}",
          data: { created: inat_import.created_at,
                  elapsed: inat_import.elapsed_time,
                  remaining: inat_import.estimated_remaining_time }) do
    [
      tag.p do
        [
          # Status: <status>
          tag.span(class: "font-weight-bold") do
            "#{:inat_import_tracker_status.t}: "
          end,
          tag.span(inat_import.state),
          tag.br,
          # Imported n of m observations
          tag.span(class: "font-weight-bold") do
                   "#{:inat_import_imported.t}: "
          end,
          tag.span(inat_import.imported_count),
          tag.span(class: "mr-2") { " #{:of.t}" },
          tag.span(inat_import.importables),
          tag.span(" #{:observations.t}")
        ].safe_join
      end,

      # Timings
      # Started: yyyy-mm-dd hh:mm:ss -nnnn
      tag.span(class: "font-weight-bold") do
        "#{:inat_import_tracker_started.l}: "
      end,
      tag.span(class: "inat-import-created") do
        inat_import.created_at&.strftime("%Y-%m-%d %H:%M:%S %z")
      end,
      tag.br,

      tag.span(class: "font-weight-bold") do
        "#{:inat_import_tracker_elapsed_time.l}: "
      end,
      tag.span(class: "inat-import-elapsed") do
        time_in_hours_minutes_seconds(inat_import.elapsed_time)
      end,
      tag.br,

      tag.span(class: "font-weight-bold") do
        "#{:inat_import_tracker_estimated_remaining_time.l}: "
      end,
      tag.span(class: "inat-import-remaining") do
        time_in_hours_minutes_seconds(inat_import.estimated_remaining_time)
      end,
      tag.br,

      tag.span(class: "font-weight-bold") do
        "#{:inat_import_tracker_ended.l}: "
      end,
      tag.span(class: "inat-import-ended") do
        inat_import.ended_at
      end,
      tag.br,

      tag.span(inat_import.error_caption, class: "font-weight-bold"),
      tag.span(inat_import.response_errors, class: "violation-highlight"),
      tag.br
    ].safe_join
  end
%>
