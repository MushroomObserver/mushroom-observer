<%
container_class(:wide)
add_edit_title(
  [@herbarium_record.format_name.t,
   @herbarium_record.herbarium_label].safe_join(" "),
  @herbarium_record
)
add_context_nav(
  herbarium_record_form_edit_tabs(back: @back, back_object: @back_object)
)
%>

<div class="row">
  <div class="col-xs-12 col-sm-7">
    <%= render(partial: "herbarium_records/form", locals: { local: true }) %>
  </div>

  <div class="col-xs-12 col-sm-5">
    <ul class="row list-unstyled">
      <% @herbarium_record.observations.each do |obs| %>
        <%= render(partial: "shared/matrix_box",
                   locals: { object: obs.rss_log || obs,
                             columns: "col-xs-12" }) %>
      <% end %>
    </ul>
  </div>
</div>
<!--.row-->
