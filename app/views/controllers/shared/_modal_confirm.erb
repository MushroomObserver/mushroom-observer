<%#
  Bootstrap modal for Turbo confirmation dialogs.
  Replaces the browser's native confirm() with a styled modal.
  Used by Turbo.setConfirmMethod() via the confirm-modal Stimulus controller.
%>

<%=
tag.div(
  class: "modal", id: "mo_confirm", role: "dialog",
  aria: { labelledby: "mo_confirm_title" },
  data: { controller: "confirm-modal" }
) do
  tag.div(class: "modal-dialog modal-sm", role: "document") do
    tag.div(class: "modal-content") do
      [
        tag.div(class: "modal-body py-4") do
          tag.h4(:are_you_sure.t, class: "modal-title", id: "mo_confirm_title",
                 data: { confirm_modal_target: "title" })
        end,
        tag.div(class: "modal-footer") do
          [
            tag.button(:CANCEL.t,
                       type: "button",
                       class: "btn btn-default",
                       data: { action: "confirm-modal#cancel" }),
            tag.button(:OK.t,
                       type: "button",
                       class: "btn btn-danger",
                       data: { action: "confirm-modal#confirm",
                               confirm_modal_target: "confirmButton" })
          ].safe_join(" ")
        end
      ].safe_join
    end
  end
end
%>
