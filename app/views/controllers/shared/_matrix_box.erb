<%
# Requires local variable object: RssLog, Observation, Image, etc. instance.
# This partial now delegates to the MatrixBox component.

identify ||= false
columns ||= "col-xs-12 col-sm-6 col-md-4 col-lg-3"
header_components = local_assigns[:header].presence || []
footer_components = local_assigns[:footer]
%>

<%= render MatrixBox.new(
  user: @user,
  object: object,
  columns: columns,
  identify: identify,
  header: header_components,
  footer: footer_components
) %>
