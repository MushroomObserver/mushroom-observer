<%
# called from observations/show/namings
# Bootstrap modal for "saving vote" and "suggestions", blank modal for message.
# Cannot be dismissed, must be removed programmatically by JS.
message ||= ""
%>

<%=
tag.div(
  class: "modal", id: "mo_ajax_progress", role: "dialog",
  aria: { labelledby: "mo_ajax_progress_caption" },
  data: { controller: "modal",
          action: "section-update:updated@window->modal#remove",
          keyboard: false, backdrop: "static" }
) do
  tag.div(class: "modal-dialog modal-sm", role: "document") do
    tag.div(class: "modal-content") do
      tag.div(class: "modal-body text-center",
              id: "modal_ajax_progress_body") do
        [
          tag.span("", id: "mo_ajax_progress_caption"),
          safe_spinner(message)
        ].safe_join
      end
    end
  end
end
%>
