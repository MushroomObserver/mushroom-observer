<%# Top panel for any description, the basic details and alternatives %>
<% review ||= false %>

<%= render(Components::Panel.new(
      panel_id: "description_details_and_alts"
    )) do |panel| %>
  <%= panel.with_heading { :show_observation_details.l } %>
  <%= panel.with_heading_links do
        description_change_links(@user, @description)
      end %>
  <%= panel.with_body do %>
    <%= tag.div(class: "row") do
          [
            tag.div(class: "col-xs-12 col-md-6") do
              show_description_details(@description, @versions, @user)
            end,
            tag.div(class: "col-xs-12 col-md-6") do
              show_alt_descriptions(user: @user, object: @description.parent,
                                    projects: @projects,
                                    current: @description)
            end
          ].safe_join
        end %>
  <% end %>
  <%= panel.with_footer do
        show_description_export_and_review(@description)
      end if review %>
<% end %>
