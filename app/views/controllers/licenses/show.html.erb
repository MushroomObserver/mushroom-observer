<%
  @container = :wide
  add_page_title(license_show_title(@license))
  add_context_nav(license_show_tabs(@license))
%>

<div>
  <p><%= :ID.t %>: <b><%= @license.id %></b></p>
  <p><%= :license_display_name.t %>: <b><%= @license.display_name %></b></p>
  <p>
    <%= :license_url.t %>:
    <b><%= link_to(@license.url, @license.url,
                { target: "_blank", rel: "noopener noreferrer" }) %></b>
  </p>
  <p><%= :DEPRECATED.t %>: <b><%= @license.deprecated.to_s %></b></p>
  <p><%= :CREATED.t %>: <b><%= license_date(@license.created_at) %></b></p>
  <p><%= :UPDATED.t %>: <b><%= license_date(@license.updated_at) %></b></p>
</div>
