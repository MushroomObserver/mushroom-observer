<%
add_page_title(:image_vote_anonymity_title.t)
form_action = {
  controller: "/images/votes/anonymity",
  action: :update
}
%>

<%= form_with(action: form_action, method: :patch) do |f| %>
  <div class="mt-3">
    <%= :image_vote_anonymity_num_anonymous.t %>: <%= @num_anonymous %><br/>
    <%= :image_vote_anonymity_num_public.t %>: <%= @num_public %><br/>
  </div>

  <div class="mt-3">
    <%= submit_button(form: f,
                      button: :image_vote_anonymity_make_anonymous.l) %><br/>
    <%= submit_button(form: f,
                      button: :image_vote_anonymity_make_public.l) %><br/>
  </div>
<% end %>
