<%= form_with(url: { action: :create, id: @image.id },
              scope: :commercial_inquiry) do |f| %>

  <%= tag.div(render(Components::InteractiveImage.new(
    user: @user,
    image: @image,
    size: :medium,
    votes: false
  ))) %>

  <% label = :commercial_inquiry_header.tp(user: @image.user.legal_name) %>
  <%= text_area_with_label(form: f, field: :content,
                           rows: 10, label: label) %>

  <%= submit_button(form: f, button: :SEND.l, center: true) %>

<% end %>
