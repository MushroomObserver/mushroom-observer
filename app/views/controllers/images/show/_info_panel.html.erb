<!-- INFO_PANEL -->
<%= render(Components::Panel.new(panel_id: "info_panel")) do |panel| %>
  <%= panel.with_heading do %>
    <%= :NOTES.l %>:
  <% end %>
  <%= panel.with_body do %>
    <div><%= :WHEN.t %>: <%= @image.when.web_date %></div>
    <div><%= :OWNER.t %>: <%= user_link(@image.user) %></div>
    <% @image.projects.each do |proj| %>
      <div><%= :PROJECT.t %>: <%= link_to_object(proj) %></div>
    <% end %>
    <% @image.observations.each do |obs| %>
      <div>
        <%= :OBSERVATION.t %>:
        <%= link_to(obs.unique_format_name.t, obs.show_link_args) %>
      </div>
    <% end %>
    <% @image.profile_users.each do |user| %>
      <div>
        <%= :USER.t %>:
        <%= link_to(user.format_name.t, user.show_link_args) %>
      </div>
    <% end %>
    <% @image.glossary_terms.each do |glossary_term| %>
      <div>
        <%= :GLOSSARY_TERM.t %>:
        <%= link_to(glossary_term.format_name.t, glossary_term.show_link_args) %>
      </div>
    <% end %>
    <% if !@image.notes.blank? %>
      <%= (:image_show_notes.l + ": " + @image.notes.to_s.html_safe).tpl %>
    <% end %>
  <% end %>
<% end %>
<!-- /INFO_PANEL -->
