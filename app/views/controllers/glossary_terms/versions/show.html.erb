<%
add_page_title(:show_past_glossary_term_title.t(
  num: @glossary_term.version,
  name: @glossary_term.name
))

add_context_nav(glossary_term_version_tabs(term: @glossary_term))
@container = :wide
%>

<div class="row">
  <div class="col-md-6">
    <%= render(partial: "glossary_terms/glossary_term",
               object: @glossary_term,
               locals: { synonyms: false }) %>
  </div>
  <div class="col-md-6">
    <%= show_past_versions(@glossary_term, @versions) %>
  </div>
</div>
<!--.row-->

<%= show_object_footer(@user, @glossary_term, @versions) %>
