<%
# This is the form for admins to switch users, while in admin mode.
# It's not in the admin controller because it has different auth

add_page_title(:app_switch_users.l)
%>

<%= form_with(url: admin_mode_path, class: "mt-3 pb-2", method: :put,
              id: "admin_switch_users_form") do |f| %>

  <%= text_field_with_label(form: f, field: :id, value: @id, size: 40,
                            placeholder: :start_typing.l,
                            label: :LOGIN_NAME.t + ":",
                            data: { autofocus: true,
                                    autocompleter: :user }) %>

  <%= submit_button(form: f, button: :SUBMIT.t, center: true) %>

<% end %>
