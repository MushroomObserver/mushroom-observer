<%
  @title = :review_donations_title.l

  tabs = [
    link_to(:donors_tab.t, action: :donors),
    link_to(:donate_tab.t, action: :donate),
    link_to(:create_donation_tab.t, action: :create_donation)
  ]
  @tabsets = { right: draw_tab_set(tabs) }
%>

<%= form_tag do %>
  <%= submit_tag(:review_donations_update.l, class: "btn center-block") %>

  <div class="text-center">
    <table class="table-striped table-review-donations push-up push-down">
      <thead>
        <tr>
          <% [:review_reviewed, :review_id, :review_who, :review_anon, :review_amount, :review_email].each do |label| %>
            <th><%= label.t %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @donations.each do |d| %>
          <tr>
            <td><%= check_box(:reviewed, d.id, checked: d.reviewed,
                              class: "form-control") %></td>
            <td><%= d.id %></td>
            <td><%= d.who %></td>
            <td><%= d.anonymous %></td>
            <td><%= d.amount %></td>
            <td><%= d.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div><!-- .text-center -->

  <%= submit_tag(:review_donations_update.l, class: "btn center-block") %>
<% end %>
