<%
@container = :wide
add_page_title(:users_by_contribution_title.t)
add_tab_set(contributors_index_tabs)
%>

<div class="row">
  <div class="col-12 col-lg-6">
    <div class="list-group">
      <%= render(partial: "contributors/contributor",
                  collection: @users, as: :user) %>
    </div>
  </div>

  <div class="col-12 col-lg-6">
    <div class="list-group">
      <div class="list-group-item">

        <%= :users_by_contribution_1.tp %>
        <% SiteData::ALL_FIELDS.select { |f| SiteData::FIELD_WEIGHTS[f] > 0}.each do |field| %>
          <div class="row">
            <div class="col-8 offset-1">
              <%= "user_stats_#{field}".to_sym.t %>
            </div>
            <div class="col-2"><%= SiteData::FIELD_WEIGHTS[field] %></div>
          </div><!--.row-->
        <% end %>
        <p class="pt-3"><%= :users_by_contribution_2.t %></p>
        <%
          v1 = SiteData::FIELD_WEIGHTS[:images]
          v2 = SiteData::FIELD_WEIGHTS[:name_description_editors]
          v3 = SiteData::FIELD_WEIGHTS[:observations]
          v4 = SiteData::FIELD_WEIGHTS[:namings]
          v5 = SiteData::FIELD_WEIGHTS[:votes]
        %>
        <div class="row">
          <div class="col-3 offset-1">&nbsp; &nbsp;3 * <%= v1 %></div>
          <div class="col-8">(<%= :users_by_contribution_2a.t %>)</div>
          <div class="col-3 offset-1">+ 1 * <%= v2 %></div>
          <div class="col-8">(<%= :users_by_contribution_2b.t %>)</div>
          <div class="col-3 offset-1">+ 1 * <%= v3 %></div>
          <div class="col-8">(<%= :users_by_contribution_2c.t %>)</div>
          <div class="col-3 offset-1">+ 1 * <%= v4 %></div>
          <div class="col-8">(<%= :users_by_contribution_2d.t %>)</div>
          <div class="col-3 offset-1">+ 1 * <%= v5 %></div>
          <div class="col-8">(<%= :users_by_contribution_2e.t %>)</div>
          <div class="col-11 offset-1">&nbsp; &nbsp;<%= 3*v1 + v2 + v3 + v4 + v5 %> <%= :users_by_contribution_2f.t %></div>
        </div><!--.row-->
        <%= :users_by_contribution_3.tp %>

      </div>
    </div>
  </div>
</div><!--.row-->
