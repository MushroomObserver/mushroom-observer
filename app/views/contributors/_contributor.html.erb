<div class="list-group-item">
  <div class="row">

    <div class="col-sm-7">
      <table class="w-100">
        <tr>
          <td class="align-middle col-sm-2">
            <strong><%= user_counter %></strong>
          </td>
          <td>
            <h4><%= user_link(user.id, user.legal_name) %></h4>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= "#{user.contribution} #{:users_by_contribution_2f.t}" %><br/>
            <%= link_to(:Observations.t, observations_path(user: user.id)) %>
          </td>
        </tr>
      </table>
    </div>

    <div class="col-xs-5">
      <%= if user.image_id
            thumbnail(user.image_id, link: user_path(user.id),
                      votes: false, size: :thumbnail)
          end
      %>
    </div>

  </div><!--.row-->
</div>
