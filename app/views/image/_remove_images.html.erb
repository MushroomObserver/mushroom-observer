<%
  @title = :image_remove_title.t(name: @object.unique_format_name)

  tabs = [
    link_with_query(:show_object.t(type: target_class), @object.show_link_args),
    link_with_query(:edit_object.t(type: target_class),
                    controller: target_class.show_controller,
                    action: target_class.edit_action, id: @object.id)
  ]
  @tabsets = { right: draw_tab_set(tabs) }
%>

<%= form_with( url: add_query_param(action: form_action,
                                    id: @object.id)) do |form| %>

  <%= form.submit(:image_remove_remove.l,
                  class: "btn btn-default d-block mx-auto my-3") %>

  <ul class="row list-unstyled mt-3">

    <%= render(layout: "shared/matrix_table",
               locals: {objects: @object.images}) do |image| %>
      <li class="matrix-box col-xs-12 col-sm-6 col-md-4">
        <div class="py-3 text-center">
          <%= thumbnail(image, votes: true, original: true) %>
        </div>
        <div class="pb-3 text-center">
          <%= fields_for :selected do |selects_form| %>
            <%= selects_form.check_box(image.id, {}, "yes", "no") %>
            <%= selects_form.label(image.id, "#{:image.t} ##{image.id}") %>
          <% end %>
        </div>
      </li><!-- .matrix-box -->
    <% end %>

  </ul>

  <%= form.submit(:image_remove_remove.l,
                  class: "btn btn-default d-block mx-auto my-3") %>

<% end %>

