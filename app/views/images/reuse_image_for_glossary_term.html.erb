<%
  @title = :image_reuse_title.t(name: @object.unique_format_name)

  tabs = [
    link_with_query(:show_object.t(type: @object.type_tag),
                    object_path(@object)),
    link_with_query(:edit_object.t(type: @object.type_tag),
                    controller: @object.show_controller,
                    action: @object.edit_action, id: @object.id)
  ]
  @tabsets = { right: draw_tab_set(tabs) }

  url_args = {action: :reuse_image_for_glossary_term, id: @object.id}
%>

<%= render(partial: "reuse_image", locals: {url_args: url_args}) %>
