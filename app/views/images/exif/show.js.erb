// What to do on images/exif show
$("#mo_ajax_progress").modal('hide');

$('body').append('<%= j render(partial: "images/exif/modal", locals: { image: @image, status: @status, data: @data }) %>');

$('#modal_image_exif_<%= @image.id %>').on('hidden.bs.modal', function () {
  $(this).remove();
});

$('#modal_image_exif_<%= @image.id %>').modal('show');
