<div class="form-group mt-3">
  <%= form.label(:full, :publication_full.t + ":") %>
  <span class="help-note"><%= :publication_full_help.t %></span>
  <%= form.text_area(:full, rows: 10, class: "form-control") %>
</div>

<div class="form-group mt-3">
  <%= form.label(:link, :publication_link.t + ":") %>
  <%= form.text_field(:link, class: "form-control") %>
</div>

<%= check_box_with_label(form: form, field: :peer_reviewed,
                         text: :publication_peer_reviewed.t) %>

<div class="form-group mt-3">
  <%= form.label(:how_helped, :publication_how_helped.t) %>
  <%= form.text_area(:how_helped, rows: 10, class: "form-control") %>
</div>

<%= check_box_with_label(form: form, field: :mo_mentioned,
                         text: :publication_mo_mentioned.t) %>
