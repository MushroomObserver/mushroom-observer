<%
button = (action == :create) ? :CREATE.t : :SAVE.t
%>

<%= form_with(model: @publication, action: action,
              id: "publication_form") do |f| %>

  <div class="form-group mt-3">
    <%= f.label(:full, :publication_full.t + ":") %>
    <%= content_tag(:span, :publication_full_help.t, class: "help-note") %>
    <%= f.text_area(:full, rows: 10, class: "form-control") %>
  </div>

  <div class="form-group mt-3">
    <%= f.label(:link, :publication_link.t + ":") %>
    <%= f.text_field(:link, class: "form-control") %>
  </div>

  <%= check_box_with_label(form: f, field: :peer_reviewed,
                          text: :publication_peer_reviewed.t) %>

  <div class="form-group mt-3">
    <%= f.label(:how_helped, :publication_how_helped.t) %>
    <%= f.text_area(:how_helped, rows: 10, class: "form-control") %>
  </div>

  <%= check_box_with_label(form: f, field: :mo_mentioned,
                          text: :publication_mo_mentioned.t) %>

  <%= centered_submit(form: f, button: button) %>

<% end %>
