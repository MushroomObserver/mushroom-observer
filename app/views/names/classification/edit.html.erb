<%
  @title = :edit_classification_title.t(name: @name.display_name)

  tabs = create_links(name_return_tab(@name))
  @tabsets = { right: draw_tab_set(tabs) }
  rank = rank_as_lower_string(@name.rank)
  action = { controller: "/names/classification", action: :update,
             id: @name.id, q: get_query_param }
  @container = :text
%>

<%= form_with(url: action, method: :put) do |f| %>

  <%= text_area_with_label(
        form: f, field: :classification, rows: 10, value: @name.classification,
        between: help_block(:p, :form_names_classification_help.t(rank: rank)),
        label: "#{:form_names_classification.t}:",
        data: { autofocus: true }
      ) %>

  <%= submit_button(form: f, button: :SAVE.t, center: true) %>

<% end %>
