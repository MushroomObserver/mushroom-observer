<%
header = [tag.h6(:show_name_lifeform.t)]
if @user
  header << tag.div do
              edit_button(
                name: :EDIT.t,
                target: add_query_param(edit_name_lifeform_path(@name.id))
              )
            end
end
header = header.safe_join
%>

<%= tag.div(id: "name_lifeform") do
  card_block(id: "lifeform_section", header: header,
             inner_class: "list-indented") do
    render(partial: "names/show/lifeform")
  end
end %>
