<%
header = [tag.span(:show_name_descriptions.t)]
if @user
  header << tag.span do
              link_to(:show_name_create_description.t,
                      add_query_param(new_name_description_path(@name.id)))
            end
end
header = header.safe_join
description_links = list_descriptions(object: @name) || []
%>

<%= card_block(id: "name_descriptions", header: header) do %>
  <% description_links.each do |desc| %>
    <%= tag.div(desc) %>
  <% end %>
  <%= :show_name_no_descriptions.t if description_links.empty? %>
<% end %>
