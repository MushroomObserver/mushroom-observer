<% if !@name.lifeform.blank? %>
  <%= tag.div(class: "mb-2") do %>
    <% @name.lifeform.strip.split(" ").each do |word| %>
      <%= tag.p(:"lifeform_#{word}".t) %>
    <% end %>
  <% end %>
<% end %>

<% if @first_child %>
  <%= tag.p do
    link_to(
      :show_name_propagate_lifeform.t,
      add_query_param(propagate_name_lifeform_form_path(@name.id))
    )
  end %>
<% end %>
