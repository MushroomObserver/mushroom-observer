<% @title = :change_user_bonuses_title.t(user: @user2.legal_name) %>

<div class="max-width-text">
  <%= form_tag({ action: :update }, method: :patch, id: "user_bonus_form") do %>

    <div class="HelpNote">
      <%= :change_user_bonuses_help.tp %>
    </div>

    <%= text_area_tag(:val, h(@val), rows: 5,
                      class: "form-control mt-3") %>

    <%= submit_tag(:SAVE_EDITS.l, class: "btn btn-default center-block mt-3") %>
  <% end %>
</div>
