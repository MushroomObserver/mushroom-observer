<%
  @title = :edit_herbarium_record_title.l(herbarium_label: @herbarium_record.herbarium_label)

  tabs = []
  if @back == "index"
    tabs << link_with_query(:edit_herbarium_record_back_to_index.t,
                            action: :index_herbarium_record)
  else
    tabs << link_with_query(:cancel_and_show.t(type: @back_object.type_tag),
                            @back_object.show_link_args)
  end
  tabs << link_with_query(:create_herbarium.t, controller: :herbarium, action: :create_herbarium)
  tabs << link_to(:herbarium_index.t, controller: :herbarium, action: :index)

  @tabsets = { right: draw_tab_set(tabs) }
%>

<div class="row">
  <div class="col-12 col-sm-7 max-width-text">
    <%= form_tag(add_query_param(action: :edit_herbarium_record, id: @herbarium_record.id, back: @back)) do %>
      <%= render(partial: "form", locals: {button: :SAVE}) %>
    <% end %>
  </div>

  <div class="col-12 col-sm-5 max-width-text">
    <% @herbarium_record.observations.each do |obs| %>
      <%= render(partial: "shared/matrix_box", locals: { object: obs.rss_log }) %>
    <% end %>
  </div>
</div>
