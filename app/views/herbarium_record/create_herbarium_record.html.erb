<%
  @title = :create_herbarium_record_title.l

  tabs = [
    link_with_query(:cancel_and_show.t(type: :observation),
                    @observation.show_link_args),
    link_with_query(:create_herbarium.t,new_herbarium_path),
    link_with_query(:herbarium_index.t, herbaria_path(flavor: :nonpersonal))
  ]
  @tabsets = { right: draw_tab_set(tabs) }
%>

<div class="row">
  <div class="col-xs-12 col-sm-7 max-width-text">
    <big style="margin-bottom:1em"><%= :Observation.t %> #<%= @observation.id %></big>

    <%= form_tag(
          add_query_param(action: :create_herbarium_record, id: @observation.id)
        ) do %>
      <%= render(partial: "form", locals: { button: :ADD }) %>
    <% end %>
  </div>

  <div class="col-xs-12 col-sm-5 max-width-text">
    <%= render(partial: "shared/matrix_box",
               locals: { object: @observation.rss_log }) %>
  </div>
</div>
