    {
      'observation_when_1i' => local_now.year,
      'observation_when_2i' => local_now.month,
      'observation_when_3i' => local_now.day,
      'observation_place_name' => '',
      'observation_lat' => '',
      'observation_long' => '',
      'name_name' => '',
      'is_collection_location' => true,
      'specimen' => false,
      'observation_notes' => ''
    }
  end

